# Rails Configuration
RAILS_ENV=production
RAILS_MASTER_KEY=your_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here

# Database Configuration
DATABASE_USERNAME=cardy
DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432
DB_POOL=15  # Connection pool size (should be >= RAILS_MAX_THREADS + Solid Queue workers)

# Server Configuration
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2
PORT=3000

# Application URL
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
# Store in Rails encrypted credentials (NOT in this .env file):
#   EDITOR=nano rails credentials:edit --environment production
#   Add the following to the credentials file:
#     resend:
#       api_key: re_your_actual_api_key_here
# The application will read it from Rails.application.credentials.dig(:resend, :api_key)
