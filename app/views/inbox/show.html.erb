<% content_for :title, "Inbox - clawdeck" %>
<% content_for :breadcrumb_standalone, "Inbox" %>
<% @inbox_page = true %>
<section id="tasks" class="pt-4 space-y-6 max-w-2xl mx-auto" data-controller="sortable completed-tasks" data-sortable-inbox-value="true" data-completed-tasks-list-id-value="<%= @task_list&.id %>">
  <!-- Add Task Input -->
  <%= render "shared/add_task_input", url: inbox_tasks_path %>

  <!-- Tasks List -->
  <ul id="tasks-list" class="space-y-2" data-sortable-target="list">
    <% if @task_list %>
      <% @task_list.tasks.incomplete.each do |task| %>
        <%= render "inbox/tasks/task", task: task %>
      <% end %>
    <% end %>

    <!-- Trash box for drag-to-delete -->
    <li id="plus-trash-box-inbox"
        data-sortable-target="plusTrashBox"
        class="transition-all duration-300 ease-in-out hidden">
      <div data-sortable-target="trashBox" class="trash-drop-area hidden w-full bg-red-50 dark:bg-red-900/20 p-4 rounded-md h-24 items-center justify-center transition-all duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="trash-icon w-6 h-6 text-red-400 dark:text-red-400 transition-all duration-200">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
      </div>
    </li>
  </ul>

  <!-- Completed Tasks Section -->
  <% if @task_list %>
    <% completed_tasks = @task_list.tasks.completed %>
    <div class="<%= 'hidden' unless completed_tasks.any? %>" id="completed-section-<%= @task_list.id %>">
      <button type="button"
              data-action="click->completed-tasks#toggle"
              class="px-4 py-2 cursor-pointer text-xs font-medium rounded-md transition-colors bg-stone-100 hover:bg-stone-200 dark:bg-white/10 dark:hover:bg-white/20 text-stone-400 dark:text-white/70">
        <span data-completed-tasks-target="count"><%= completed_tasks.count %></span> completed
      </button>
      <div data-completed-tasks-target="wrapper" class="grid transition-[grid-template-rows] duration-600 ease-in-out" style="grid-template-rows: 1fr;">
        <ul class="pt-6 space-y-2 min-h-0 overflow-hidden" id="completed-tasks-<%= @task_list.id %>" data-completed-tasks-target="content">
          <% completed_tasks.each do |task| %>
            <%= render "inbox/tasks/task", task: task %>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</section>
