<div class="max-w-5xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-content">ZeroBitch Agent Detail</h1>
  <p class="mt-2 text-content-secondary">Agent ID: <span class="font-mono"><%= @agent_id %></span></p>

  <div class="mt-6 flex flex-wrap gap-2">
    <%= button_to "Start", start_zerobitch_agent_path(@agent_id), method: :post, class: "rounded-md bg-green-600 px-3 py-2 text-sm font-medium text-white" %>
    <%= button_to "Stop", stop_zerobitch_agent_path(@agent_id), method: :post, class: "rounded-md bg-yellow-600 px-3 py-2 text-sm font-medium text-white" %>
    <%= button_to "Restart", restart_zerobitch_agent_path(@agent_id), method: :post, class: "rounded-md bg-orange-600 px-3 py-2 text-sm font-medium text-white" %>
    <%= button_to "Delete", zerobitch_agent_path(@agent_id), method: :delete, class: "rounded-md bg-red-600 px-3 py-2 text-sm font-medium text-white", data: { turbo_confirm: "Delete agent #{@agent_id}?" } %>
  </div>
</div>
