<% has_current_user = defined?(current_user) && current_user %>
<% show_agent_preview = %w[in_progress in_review].include?(task.status) && task.agent_session_id.present? %>
<% show_agent_modal_btn = task.agent_session_id.present? %>
<% show_error_state = task.errored? %>
<% blocking_task_ids = local_assigns[:blocking_task_ids] || local_assigns.fetch(:blocking_task_ids_by_task_id, {})[task.id] || [] %>
<%# Model-based left border color %>
<% model_border_class = case task.model.to_s.downcase
  when /opus/ then "border-l-[3px] border-l-purple-500"
  when /sonnet/ then "border-l-[3px] border-l-blue-500"
  when /gemini/ then "border-l-[3px] border-l-green-500"
  when /glm/ then "border-l-[3px] border-l-yellow-500"
  when /codex/ then "border-l-[3px] border-l-orange-500"
  else ""
end %>
<%# Nightly card styling %>
<% nightly_card_class = task.nightly? ? 'task-card-nightly' : '' %>
<% cache ["task-card-v2", task.cache_key_with_version, blocking_task_ids, current_user&.id] do %>
<li id="task_<%= task.id %>"
    role="article"
    aria-label="Task: <%= h(task.name.truncate(80)) %> â€” <%= task.status.humanize %><%= ', blocked' if task.blocked? %><%= ', error' if show_error_state %>"
    class="group relative w-full bg-bg-elevated border border-border rounded-md cursor-pointer transition-all hover:bg-bg-hover overflow-visible <%= model_border_class %> <%= 'border-l-4 border-l-status-warning' if task.blocked? %> <%= 'border-l-4 border-l-red-500' if show_error_state %> <%= nightly_card_class %>"
    <% if has_current_user %>
      data-controller="dropdown context-menu<%= ' agent-preview' if show_agent_preview %><%= ' agent-modal' if show_agent_modal_btn %>"
      data-action="contextmenu->dropdown#openAtCursor<%= ' mouseenter->agent-preview#show mouseleave->agent-preview#hide' if show_agent_preview %> click->bulk-operations#selectCard"
      <% if show_agent_preview %>
        data-agent-preview-task-id-value="<%= task.id %>"
        data-agent-preview-board-id-value="<%= task.board_id %>"
        data-agent-preview-task-name-value="<%= h(task.name.truncate(50)) %>"
        data-agent-preview-board-icon-value="<%= task.board.icon %>"
      <% end %>
      data-dropdown-context-menu-url-value="<%= context_menu_board_task_path(task.board, task) %>"
      data-dropdown-context-menu-frame-id-value="task_<%= task.id %>_context_menu_frame"
      <% if show_agent_modal_btn %>
        data-agent-modal-task-id-value="<%= task.id %>"
        data-agent-modal-board-id-value="<%= task.board_id %>"
        data-agent-modal-session-id-value="<%= task.agent_session_id %>"
        data-agent-modal-task-status-value="<%= task.status %>"
        data-agent-modal-board-icon-value="<%= task.board.icon %>"
        data-agent-modal-modal-url-value="<%= agent_modal_board_task_path(task.board, task) %>"
      <% end %>
    <% end %>
    data-task-card
    data-task-id="<%= task.id %>"
    data-task-status="<%= task.status %>"
    data-task-position="<%= task.position %>"
    data-task-blocked="<%= task.blocked? %>"
    data-task-blocking-ids="<%= blocking_task_ids.join(',') %>"
    data-task-model="<%= task.model %>"
    data-task-priority="<%= task.priority %>"
    data-task-has-agent="<%= task.assigned_to_agent? %>"
    data-task-nightly="<%= task.nightly? %>">

  <%# Context Menu (right-click) - lazy loaded on first open %>
  <% if has_current_user %>
    <button data-dropdown-target="button" class="hidden" aria-expanded="false"></button>
    <div data-dropdown-target="menu" role="menu" class="hidden fixed z-[10000] min-w-[160px] bg-bg-elevated border border-border rounded-lg shadow-lg py-1">
      <%= turbo_frame_tag "task_#{task.id}_context_menu_frame" do %>
        <div class="px-3 py-2 text-xs text-content-muted">Loading menuâ€¦</div>
      <% end %>
    </div>
  <% end %>

  <%# Bulk Selection Checkbox - hidden by default, shown when in selection mode %>
  <div data-bulk-checkbox class="hidden absolute top-2 left-2 z-10">
    <label class="flex items-center justify-center w-5 h-5 rounded bg-bg-surface border border-border cursor-pointer hover:border-accent transition-colors"
           onclick="event.stopPropagation()">
      <input type="checkbox"
             data-bulk-operations-target="checkbox"
             data-action="change->bulk-operations#checkboxChanged"
             class="sr-only peer">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" 
           class="w-4 h-4 text-accent hidden peer-checked:block">
        <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
      </svg>
    </label>
  </div>

  <%# === CARD HEADER: Error banner, Title, ID, Spinner === %>
  <%= render "boards/tasks/card_header", task: task, show_error_state: show_error_state, has_current_user: has_current_user %>

  <%# Footer: Priority + Actions + Model + Agent - OUTSIDE the link %>
  <div class="flex items-center justify-between px-3 pb-3 pt-1 gap-1">
    <%# Priority Indicator - ALWAYS VISIBLE %>
    <div class="flex items-center flex-shrink-0">
      <% flame_count = case task.priority
        when "high" then 3
        when "medium" then 2
        when "low" then 1
        else 0
      end %>
      <% flame_color = case task.priority
        when "high" then "text-accent"
        when "medium" then "text-orange-500"
        when "low" then "text-yellow-500"
        else "text-content-muted/50"
      end %>
      <% if flame_count == 0 %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5 <%= flame_color %>">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0 1 12 21 8.25 8.25 0 0 1 6.038 7.047 8.287 8.287 0 0 0 9 9.601a8.983 8.983 0 0 1 3.361-6.867 8.21 8.21 0 0 0 3 2.48Z" />
        </svg>
      <% else %>
        <div class="flex -space-x-1.5">
          <% flame_count.times do |i| %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-3.5 h-3.5 <%= flame_color %>" style="position: relative; z-index: <%= flame_count - i %>;">
              <path fill-rule="evenodd" d="M12.963 2.286a.75.75 0 0 0-1.071-.136 9.742 9.742 0 0 0-3.539 6.176 7.547 7.547 0 0 1-1.705-1.715.75.75 0 0 0-1.152-.082A9 9 0 1 0 15.68 4.534a7.46 7.46 0 0 1-2.717-2.248ZM15.75 14.25a3.75 3.75 0 1 1-7.313-1.172c.628.465 1.35.81 2.133 1a5.99 5.99 0 0 1 1.925-3.546 3.75 3.75 0 0 1 3.255 3.718Z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Action Buttons + Model + Agent badges %>
    <div class="flex items-center gap-1 flex-wrap justify-end">
      <%# === CARD ACTIONS: NEXT, Follow-up, Agent button === %>
      <%= render "boards/tasks/card_actions", task: task, has_current_user: has_current_user, show_agent_modal_btn: show_agent_modal_btn %>
      
      <%# === CARD BADGES: Model, Review, Validation, Recurring, Nightly - ALWAYS VISIBLE === %>
      <div class="flex items-center gap-1 flex-wrap justify-end">
        <%= render "boards/tasks/card_badges", task: task, has_current_user: has_current_user %>
      </div>
    </div>
  </div>

  <%# Agent Preview Popover (for in_progress tasks with agent - desktop hover) %>
  <% if show_agent_preview %>
    <div data-agent-preview-target="preview" 
         data-action="mouseenter->agent-preview#show mouseleave->agent-preview#hide"
         class="hidden p-2 bg-bg-surface border border-border rounded-lg shadow-lg max-h-40 overflow-hidden">
      <div class="text-xs text-content-muted">Loading...</div>
    </div>
  <% end %>

  <%# Agent Modal (lazy-loaded frame; content fetched on first ðŸ“Ÿ click) %>
  <% if show_agent_modal_btn && has_current_user %>
    <%= turbo_frame_tag "task_#{task.id}_agent_modal_frame", data: { agent_modal_target: "frame" } %>
  <% end %>
</li>
<% end %>
