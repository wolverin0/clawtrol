<%# Archived Tasks View %>
<div class="h-screen flex flex-col bg-bg-base">
  <%# Header %>
  <%= render "boards/header" %>

  <div class="flex-1 flex flex-col min-h-0 px-6 py-6">
    <%# Page Header %>
    <div class="flex items-center justify-between mb-6 flex-shrink-0">
      <div class="flex items-center gap-3">
        <%= link_to board_path(@board), class: "text-content-muted hover:text-content transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
          </svg>
        <% end %>
        <h1 class="text-xl font-semibold text-content font-display">
          ðŸ“¦ Archived Tasks
        </h1>
        <span class="text-sm text-content-muted">
          (<%= @board.icon %> <%= @board.name %>)
        </span>
      </div>
      <div class="text-sm text-content-muted">
        <%= @pagy.count %> archived task<%= @pagy.count == 1 ? '' : 's' %>
      </div>
    </div>

    <%# Empty State %>
    <% if @tasks.empty? %>
      <div class="text-center py-12">
        <div class="text-4xl mb-3">ðŸ“¦</div>
        <p class="text-content-muted">No archived tasks yet</p>
        <p class="text-sm text-content-muted mt-1">
          Completed tasks can be archived from the Done column
        </p>
      </div>
    <% else %>
      <%# Scrollable Table Container with Infinite Scroll %>
      <div class="flex-1 min-h-0"
           data-controller="infinite-scroll"
           data-infinite-scroll-url-value="<%= archived_board_path(@board) %>"
           data-infinite-scroll-page-value="<%= @pagy.page %>"
           data-infinite-scroll-has-more-value="<%= @pagy.next.present? %>">
        
        <div class="bg-bg-surface border border-border rounded-lg h-full flex flex-col overflow-hidden">
          <%# Fixed Header %>
          <table class="w-full">
            <thead class="bg-bg-elevated border-b border-border">
              <tr>
                <th class="text-left px-4 py-3 text-xs font-medium text-content-muted uppercase tracking-wider w-20">ID</th>
                <th class="text-left px-4 py-3 text-xs font-medium text-content-muted uppercase tracking-wider">Task</th>
                <th class="text-left px-4 py-3 text-xs font-medium text-content-muted uppercase tracking-wider w-36">Completed</th>
                <th class="text-left px-4 py-3 text-xs font-medium text-content-muted uppercase tracking-wider w-36">Archived</th>
                <th class="text-right px-4 py-3 text-xs font-medium text-content-muted uppercase tracking-wider w-28">Actions</th>
              </tr>
            </thead>
          </table>
          
          <%# Scrollable Body %>
          <div class="flex-1 overflow-y-auto" data-infinite-scroll-target="container">
            <table class="w-full">
              <tbody class="divide-y divide-border" data-infinite-scroll-target="entries">
                <% @tasks.each do |task| %>
                  <%= render "boards/archived_row", task: task, board: @board %>
                <% end %>
              </tbody>
            </table>
            
            <%# Sentinel for IntersectionObserver %>
            <div data-infinite-scroll-target="sentinel" class="h-4"></div>
            
            <%# Loading indicator %>
            <div data-infinite-scroll-target="loader" class="hidden py-4 text-center">
              <div class="inline-flex items-center gap-2 text-content-muted">
                <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="text-sm">Loading more...</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%# Page info (shows current progress) %>
      <div class="flex items-center justify-center mt-4 flex-shrink-0">
        <span class="text-sm text-content-muted" id="page-progress">
          Showing <span data-tasks-shown><%= @tasks.size %></span> of <%= @pagy.count %> tasks
        </span>
      </div>
    <% end %>
  </div>
</div>
