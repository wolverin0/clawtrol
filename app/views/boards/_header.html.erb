          <div class="w-8 h-8 rounded-md overflow-hidden bg-bg-surface flex items-center justify-center">
            <% if current_user.has_avatar? %>
              <%= image_tag current_user.avatar_source, class: "w-full h-full object-cover", alt: "Your avatar" %>
            <% else %>
              <svg class="w-4 h-4 text-content-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            <% end %>
          </div>
        </button>

        <div data-dropdown-target="menu"
             class="hidden absolute right-0 top-full mt-1 w-48 bg-bg-surface rounded-lg shadow-lg border border-border overflow-hidden z-50">
          <div class="px-3 py-2.5 bg-bg-elevated border-b border-border">
            <p class="text-xs font-medium text-content truncate"><%= current_user.email_address.split('@').first %></p>
            <% if current_user.agent_last_active_at.present? %>
              <p class="text-xs text-content-muted flex items-center gap-1">
                <%= current_user.agent_emoji || "ğŸ¦" %>
                <span><%= current_user.agent_name || 'Agent' %></span>
                <% if current_user.agent_last_active_at > 5.minutes.ago %>
                  <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                <% end %>
              </p>
            <% end %>
          </div>
          <div class="py-1">
            <%= link_to dashboard_path, class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
              ğŸ“Š Dashboard
            <% end %>
            <%= link_to analytics_path, class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
              ğŸ“ˆ Analytics
            <% end %>
            <%= link_to agent_personas_path, class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
              ğŸ§  Agent Personas
            <% end %>
            <%= link_to roster_agent_personas_path, class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
              ğŸ“‹ Roster
            <% end %>
            <%= link_to settings_path, class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Settings
            <% end %>
            <div class="border-t border-border my-1"></div>
            <%= link_to session_path,
                method: :delete,
                data: { turbo_method: :delete },
                class: "flex items-center gap-2 px-3 py-2 text-xs text-accent hover:bg-bg-elevated transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Sign out
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Row 2: Expanded Filters Bar (always visible) %>
