<% content_for :title, "#{@board.name} - clawdeck" %>
<% @board_page = true %>

<%# Column config for mobile tabs %>
<%
  column_labels = {
    "inbox" => "üì• Inbox",
    "up_next" => "‚è≠ Next",
    "in_progress" => "üöÄ Active",
    "in_review" => "üëÄ Review",
    "done" => "‚úÖ Done"
  }
%>

<%# Subscribe to real-time updates for this board %>
<%= turbo_stream_from "board_#{@board.id}" %>

<div class="h-full flex flex-col pb-16 md:pb-0" 
     data-controller="board kanban-refresh mobile-columns bulk-operations"
     data-kanban-refresh-board-id-value="<%= @board.id %>"
     data-kanban-refresh-interval-value="15000"
     data-kanban-refresh-api-path-value="<%= status_api_v1_board_path(@board) %>"
     data-bulk-operations-url-value="<%= bulk_update_board_tasks_path(@board) %>">
  <%# Board Header %>
  <%= render "boards/header" %>

  <%# Filter Bar %>
  <%= render "boards/filter_bar" %>

  <%# Bulk Selection Toolbar %>
  <div class="flex items-center gap-2 px-4 md:px-6 py-2 bg-bg-surface border-b border-border">
    <%# Toggle Select Mode Button %>
    <button type="button"
            data-action="click->bulk-operations#toggle"
            data-bulk-operations-target="toggleButton"
            class="inline-flex items-center gap-1.5 px-2.5 py-1.5 rounded-md text-xs bg-bg-elevated hover:bg-bg-hover text-content-secondary transition-colors cursor-pointer">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
      </svg>
      <span>Select</span>
    </button>

    <%# Selection Counter %>
    <span data-bulk-operations-target="counter" 
          class="hidden text-xs text-content-muted">
      0 selected
    </span>

    <%# Quick Actions (visible when in select mode with items selected) %>
    <div class="hidden md:flex items-center gap-1 ml-auto" data-bulk-operations-target="quickActions">
      <button type="button"
              data-action="click->bulk-operations#selectAll"
              class="px-2 py-1 text-xs text-content-muted hover:text-content transition-colors cursor-pointer">
        Select all
      </button>
      <button type="button"
              data-action="click->bulk-operations#deselectAll"
              class="px-2 py-1 text-xs text-content-muted hover:text-content transition-colors cursor-pointer">
        Clear
      </button>
    </div>
  </div>

  <%# Tag filter indicator %>
  <% if @current_tag.present? %>
    <div class="flex items-center gap-2 px-4 md:px-6 py-2 bg-bg-surface border-b border-border">
      <span class="text-xs text-content-muted">Filtered by:</span>
      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-bg-elevated text-content">
        <%= @current_tag %>
        <%= link_to board_path(@board), class: "ml-1 hover:text-accent" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
          </svg>
        <% end %>
      </span>
    </div>
  <% end %>

  <%# Aggregator notice %>
  <% if @is_aggregator %>
    <div class="flex items-center gap-2 px-4 md:px-6 py-2 bg-accent/10 border-b border-accent/30">
      <span class="text-xs text-accent">üåê Viewing tasks from all boards (read-only aggregation)</span>
    </div>
  <% end %>

  <%# Mobile Column Tabs - visible only on mobile %>
  <div class="flex md:hidden overflow-x-auto border-b border-border bg-bg-surface gap-1 px-2 py-2"
       data-mobile-columns-target="tabs">
    <% (Task.statuses.keys - ["archived"]).each do |status| %>
      <button data-action="click->mobile-columns#switch"
              data-column="<%= status %>"
              data-mobile-columns-target="tabButton"
              class="mobile-tab-inactive px-3 py-2 text-xs whitespace-nowrap rounded-lg transition-colors">
        <%= column_labels[status] %>
        <span class="text-content-muted ml-1">(<%= @columns[status.to_sym]&.count || 0 %>)</span>
      </button>
    <% end %>
  </div>

  <%# Kanban Columns - horizontal scroll on desktop, single column on mobile %>
  <div class="flex-1 overflow-x-auto overflow-y-auto bg-bg-base"
       data-mobile-columns-target="columnsContainer">
    <div class="flex gap-3 sm:gap-4 px-4 sm:px-6 py-4 items-start min-h-full md:min-w-max md:min-w-0">
      <% (Task.statuses.keys - ["archived"]).each do |status| %>
        <%= render "boards/column", status: status, tasks: @columns[status.to_sym] %>
      <% end %>
    </div>
  </div>

  <%# Task Panel Container - loaded via Turbo Frame %>
  <%= turbo_frame_tag "task_panel" %>

  <%# New Task Modal %>
  <%= turbo_frame_tag "new_task_modal" %>

  <%# Follow-up Modal %>
  <%= turbo_frame_tag "followup_modal" %>

  <%# Handoff Modal %>
  <%= turbo_frame_tag "handoff_modal" %>

  <%# Validation Output Modal %>
  <%= turbo_frame_tag "validation_output_modal" %>

  <%# Validate Modal %>
  <%= turbo_frame_tag "validate_modal" %>

  <%# Debate Modal %>
  <%= turbo_frame_tag "debate_modal" %>

  <%# Review Output Modal %>
  <%= turbo_frame_tag "review_output_modal" %>

  <%# Toast Container (for Turbo Stream toasts) %>
  <div id="toast-container" class="fixed top-4 right-4 z-50 flex flex-col gap-2 pointer-events-none">
    <%# Toasts are prepended here via Turbo Stream %>
  </div>

  <%# Undo Toast Container (for status change undo) %>
  <div data-controller="undo-toast" 
       data-undo-toast-duration-value="5000"
       class="fixed bottom-4 left-1/2 -translate-x-1/2 z-[90] pointer-events-none">
    <div data-undo-toast-target="container" class="flex flex-col gap-2">
      <%# Undo toasts are dynamically added here %>
    </div>
  </div>

  <%# Keyboard Shortcuts Help Modal %>
  <%= render "shared/keyboard_help" %>

  <%# Bulk Actions Bar - appears when items are selected %>
  <div data-bulk-operations-target="actionBar"
       class="hidden fixed bottom-4 left-1/2 -translate-x-1/2 z-50 transition-all duration-200 ease-out">
    <div class="flex items-center gap-2 px-4 py-3 bg-bg-surface border border-border rounded-xl shadow-2xl">
      <%# Move to status dropdown %>
      <div class="relative" data-controller="dropdown">
        <button type="button"
                data-dropdown-target="button"
                data-action="click->dropdown#toggle"
                class="inline-flex items-center gap-1.5 px-3 py-2 rounded-lg text-sm bg-bg-elevated hover:bg-bg-hover text-content transition-colors cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
          </svg>
          Move to
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-content-muted">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </button>
        <div data-dropdown-target="menu"
             class="hidden absolute bottom-full left-0 mb-2 w-44 bg-bg-surface rounded-lg shadow-lg border border-border overflow-hidden z-50">
          <div class="py-1">
            <% [
              ["inbox", "üì• Inbox"],
              ["up_next", "‚è≠ Up Next"],
              ["in_progress", "üöÄ In Progress"],
              ["in_review", "üëÄ In Review"],
              ["done", "‚úÖ Done"]
            ].each do |status, label| %>
              <button type="button"
                      data-action="click->bulk-operations#moveToStatus click->dropdown#close"
                      data-status="<%= status %>"
                      class="w-full flex items-center gap-2 px-3 py-2 text-sm text-content-secondary hover:bg-bg-hover transition-colors cursor-pointer">
                <%= label %>
              </button>
            <% end %>
          </div>
        </div>
      </div>

      <%# Change model dropdown %>
      <div class="relative" data-controller="dropdown">
        <button type="button"
                data-dropdown-target="button"
                data-action="click->dropdown#toggle"
                class="inline-flex items-center gap-1.5 px-3 py-2 rounded-lg text-sm bg-bg-elevated hover:bg-bg-hover text-content transition-colors cursor-pointer">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09Z" />
          </svg>
          Model
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-content-muted">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </button>
        <div data-dropdown-target="menu"
             class="hidden absolute bottom-full left-0 mb-2 w-44 bg-bg-surface rounded-lg shadow-lg border border-border overflow-hidden z-50">
          <div class="py-1">
            <% Task::MODELS.each do |model| %>
              <button type="button"
                      data-action="click->bulk-operations#changeModel click->dropdown#close"
                      data-model="<%= model %>"
                      class="w-full flex items-center gap-2 px-3 py-2 text-sm text-content-secondary hover:bg-bg-hover transition-colors cursor-pointer">
                <%= model.titleize %>
              </button>
            <% end %>
          </div>
        </div>
      </div>

      <div class="w-px h-6 bg-border"></div>

      <%# Archive button %>
      <button type="button"
              data-action="click->bulk-operations#archive"
              class="inline-flex items-center gap-1.5 px-3 py-2 rounded-lg text-sm bg-bg-elevated hover:bg-bg-hover text-content transition-colors cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0-3-3m3 3 3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
        </svg>
        Archive
      </button>

      <%# Delete button %>
      <button type="button"
              data-action="click->bulk-operations#deleteSelected"
              class="inline-flex items-center gap-1.5 px-3 py-2 rounded-lg text-sm bg-red-500/20 hover:bg-red-500/30 text-red-400 transition-colors cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
        Delete
      </button>

      <div class="w-px h-6 bg-border"></div>

      <%# Exit selection mode %>
      <button type="button"
              data-action="click->bulk-operations#exit"
              class="p-2 rounded-lg text-content-muted hover:text-content hover:bg-bg-hover transition-colors cursor-pointer"
              title="Exit selection mode">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <%# Delete Drop Zone - appears when dragging a card %>
       data-delete-zone-url-value="<%= board_tasks_path(@board) %>"
       class="fixed bottom-0 left-0 right-0 z-40 translate-y-full opacity-0 transition-all duration-200 ease-out pointer-events-none">
    <div data-delete-zone-target="droparea"
         class="pointer-events-auto mx-4 mb-4 py-8 px-6 bg-red-500/20 backdrop-blur-sm rounded-lg flex items-center justify-center gap-2 text-red-400 transition-all duration-150">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
      </svg>
      <span class="text-sm">Drop to delete</span>
    </div>
  </div>
</div>

<%# Task auto-open removed - direct visits render full page via show action %>
