<% content_for :title, "#{@board.name} - clawdeck" %>
<% @board_page = true %>

<%# Subscribe to real-time updates for this board %>
<%= turbo_stream_from "board_#{@board.id}" %>

<div class="h-full flex flex-col" 
     data-controller="board kanban-refresh"
     data-kanban-refresh-board-id-value="<%= @board.id %>"
     data-kanban-refresh-interval-value="15000"
     data-kanban-refresh-api-path-value="<%= status_api_v1_board_path(@board) %>">
  <%# Board Header %>
  <%= render "boards/header" %>

  <%# Tag filter indicator %>
  <% if @current_tag.present? %>
    <div class="flex items-center gap-2 px-6 py-2 bg-bg-surface border-b border-border">
      <span class="text-xs text-content-muted">Filtered by:</span>
      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-bg-elevated text-content">
        <%= @current_tag %>
        <%= link_to board_path(@board), class: "ml-1 hover:text-accent" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
          </svg>
        <% end %>
      </span>
    </div>
  <% end %>

  <%# Aggregator notice %>
  <% if @is_aggregator %>
    <div class="flex items-center gap-2 px-6 py-2 bg-accent/10 border-b border-accent/30">
      <span class="text-xs text-accent">ğŸŒ Viewing tasks from all boards (read-only aggregation)</span>
    </div>
  <% end %>

  <%# Kanban Columns - horizontal scroll on mobile, variable height columns %>
  <div class="flex-1 overflow-x-auto overflow-y-auto bg-bg-base">
    <div class="flex gap-3 sm:gap-4 px-4 sm:px-6 py-4 items-start min-h-full min-w-max sm:min-w-0">
      <% (Task.statuses.keys - ["archived"]).each do |status| %>
        <%= render "boards/column", status: status, tasks: @columns[status.to_sym] %>
      <% end %>
    </div>
  </div>

  <%# Task Panel Container - loaded via Turbo Frame %>
  <%= turbo_frame_tag "task_panel" %>

  <%# New Task Modal %>
  <%= turbo_frame_tag "new_task_modal" %>

  <%# Follow-up Modal %>
  <%= turbo_frame_tag "followup_modal" %>

  <%# Handoff Modal %>
  <%= turbo_frame_tag "handoff_modal" %>

  <%# Validation Output Modal %>
  <%= turbo_frame_tag "validation_output_modal" %>

  <%# Validate Modal %>
  <%= turbo_frame_tag "validate_modal" %>

  <%# Debate Modal %>
  <%= turbo_frame_tag "debate_modal" %>

  <%# Review Output Modal %>
  <%= turbo_frame_tag "review_output_modal" %>

  <%# Toast Container %>
  <div id="toast-container" class="fixed top-4 right-4 z-50 flex flex-col gap-2 pointer-events-none">
    <%# Toasts are prepended here via Turbo Stream %>
  </div>

  <%# Delete Drop Zone - appears when dragging a card %>
  <div data-controller="delete-zone"
       data-delete-zone-url-value="<%= board_tasks_path(@board) %>"
       class="fixed bottom-0 left-0 right-0 z-40 translate-y-full opacity-0 transition-all duration-200 ease-out pointer-events-none">
    <div data-delete-zone-target="droparea"
         class="pointer-events-auto mx-4 mb-4 py-8 px-6 bg-red-500/20 backdrop-blur-sm rounded-lg flex items-center justify-center gap-2 text-red-400 transition-all duration-150">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
      </svg>
      <span class="text-sm">Drop to delete</span>
    </div>
  </div>
</div>
