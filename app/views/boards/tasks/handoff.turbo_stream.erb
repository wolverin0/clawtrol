<%# Replace the task card with updated version %>
<%= turbo_stream.replace "task_#{@task.id}" do %>
  <%= render "boards/task_card", task: @task %>
<% end %>

<%# Close the modal %>
<%= turbo_stream.update "handoff_modal" do %>
  <%# Empty - modal will be closed by Stimulus %>
<% end %>

<%# Show a success toast %>
<%= turbo_stream.prepend "toast-container" do %>
  <div data-controller="toast" data-toast-duration-value="5000" class="flex items-center gap-3 px-4 py-3 bg-green-500/20 border border-green-500/30 rounded-lg shadow-lg animate-slide-in">
    <span class="text-green-400">âœ…</span>
    <span class="text-sm text-content">Task handed off to <%= @task.model&.upcase || 'new model' %></span>
    <button type="button" data-action="click->toast#dismiss" class="ml-auto text-content-muted hover:text-content">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>
