<%# Remove the task card %>
<%= turbo_stream.remove "task_#{@task.id}" %>

<%# Update the column count %>
<% column_count = @board.tasks.where(status: @task.status).count %>
<%= turbo_stream.replace "column-#{@task.status}-count" do %>
  <span id="column-<%= @task.status %>-count" class="ml-auto text-xs text-content-secondary bg-bg-elevated px-1.5 py-0.5 rounded"><%= column_count %></span>
<% end %>

<%# Update the header count if it's inbox or in_progress %>
<% if %w[inbox in_progress].include?(@task.status) %>
  <%= turbo_stream.update "header-#{@task.status}-count", column_count.to_s %>
<% end %>

<%# Clear the panel - the modal will handle closing itself %>
<%= turbo_stream.update "task_panel", "" %>
