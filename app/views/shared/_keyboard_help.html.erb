<%# Keyboard Shortcuts Help Modal %>
<div id="keyboard-shortcuts-help"
     class="hidden fixed inset-0 z-50 flex items-center justify-center p-4"
     tabindex="-1"
     role="dialog"
     aria-labelledby="keyboard-shortcuts-title"
     aria-modal="true">
  <%# Backdrop %>
  <div class="absolute inset-0 bg-black/60 backdrop-blur-sm"
       onclick="document.getElementById('keyboard-shortcuts-help').classList.add('hidden')"></div>

  <%# Modal Content %>
  <div class="relative bg-bg-surface border border-border rounded-xl shadow-2xl shadow-black/50 w-full max-w-md overflow-hidden">
    <%# Header %>
    <div class="flex items-center justify-between px-5 py-4 border-b border-border">
      <h2 id="keyboard-shortcuts-title" class="text-lg font-display font-semibold text-content">
        ‚å®Ô∏è Keyboard Shortcuts
      </h2>
      <button type="button"
              onclick="document.getElementById('keyboard-shortcuts-help').classList.add('hidden')"
              class="text-content-muted hover:text-content transition-colors p-1 rounded-lg hover:bg-bg-elevated"
              aria-label="Close">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <%# Shortcuts List %>
    <div class="p-5 space-y-3">
      <%# Navigation Section %>
      <div class="space-y-2">
        <h3 class="text-xs font-semibold text-content-muted uppercase tracking-wider">Navigation</h3>
        
        <div class="flex items-center justify-between py-2 px-3 rounded-lg bg-bg-elevated/50">
          <span class="text-sm text-content">New task (focus input)</span>
          <kbd class="px-2 py-1 text-xs font-mono font-semibold text-content bg-bg-base border border-border rounded shadow-sm">n</kbd>
        </div>

        <div class="flex items-center justify-between py-2 px-3 rounded-lg bg-bg-elevated/50">
          <span class="text-sm text-content">Toggle agent terminal</span>
          <div class="flex items-center gap-1">
            <kbd class="px-2 py-1 text-xs font-mono font-semibold text-content bg-bg-base border border-border rounded shadow-sm">Ctrl</kbd>
            <span class="text-content-muted">+</span>
            <kbd class="px-2 py-1 text-xs font-mono font-semibold text-content bg-bg-base border border-border rounded shadow-sm">/</kbd>
          </div>
        </div>
      </div>

      <%# General Section %>
      <div class="space-y-2 pt-2">
        <h3 class="text-xs font-semibold text-content-muted uppercase tracking-wider">General</h3>

        <div class="flex items-center justify-between py-2 px-3 rounded-lg bg-bg-elevated/50">
          <span class="text-sm text-content">Show this help</span>
          <kbd class="px-2 py-1 text-xs font-mono font-semibold text-content bg-bg-base border border-border rounded shadow-sm">?</kbd>
        </div>

        <div class="flex items-center justify-between py-2 px-3 rounded-lg bg-bg-elevated/50">
          <span class="text-sm text-content">Close modal/panel</span>
          <kbd class="px-2 py-1 text-xs font-mono font-semibold text-content bg-bg-base border border-border rounded shadow-sm">Esc</kbd>
        </div>
      </div>

      <%# Tip %>
      <div class="pt-3 mt-3 border-t border-border">
        <p class="text-xs text-content-muted text-center">
          üí° Shortcuts are disabled when typing in text fields
        </p>
      </div>
    </div>
  </div>
</div>
