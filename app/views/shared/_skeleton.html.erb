<%# Loading skeleton component
    Usage: render "shared/skeleton", type: "card" | "line" | "avatar" | "table-row"
    Optional: count: N for multiple skeletons %>
<% type ||= "card" %>
<% count ||= 1 %>
<% count.times do %>
  <% case type %>
  <% when "card" %>
    <div class="animate-pulse bg-bg-surface rounded-lg border border-border p-4 space-y-3">
      <div class="h-4 bg-bg-elevated rounded w-3/4"></div>
      <div class="h-3 bg-bg-elevated rounded w-1/2"></div>
      <div class="h-3 bg-bg-elevated rounded w-5/6"></div>
    </div>
  <% when "line" %>
    <div class="animate-pulse h-4 bg-bg-elevated rounded w-full"></div>
  <% when "avatar" %>
    <div class="animate-pulse flex items-center gap-3">
      <div class="w-8 h-8 bg-bg-elevated rounded-full"></div>
      <div class="h-3 bg-bg-elevated rounded w-24"></div>
    </div>
  <% when "table-row" %>
    <div class="animate-pulse flex items-center gap-4 py-2">
      <div class="h-3 bg-bg-elevated rounded w-1/4"></div>
      <div class="h-3 bg-bg-elevated rounded w-1/3"></div>
      <div class="h-3 bg-bg-elevated rounded w-1/6"></div>
    </div>
  <% end %>
<% end %>
