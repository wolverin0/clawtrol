<% content_for :title, "Cherry-Pick Pipeline" %>

<div class="max-w-7xl mx-auto px-4 py-6 space-y-6" data-controller="cherry-pick">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
        ğŸ’ Cherry-Pick Pipeline
      </h1>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
        Select playground commits â†’ preview â†’ cherry-pick to production ~/clawdeck
      </p>
    </div>
    <div class="flex items-center gap-3">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
        <%= @commits.size %> pickable commits
      </span>
      <%= link_to "â† Playground", factory_playground_path, class: "text-sm text-indigo-600 dark:text-indigo-400 hover:underline" %>
    </div>
  </div>

  <% if @error.present? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
      <p class="text-sm text-red-700 dark:text-red-300"><%= @error %></p>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Commit list (left 2/3) -->
    <div class="lg:col-span-2 space-y-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
        <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center gap-2">
            ğŸ“‹ Pickable Commits
            <span class="text-xs font-normal text-gray-500 dark:text-gray-400">(ahead of production/main)</span>
          </h2>
          <label class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400 cursor-pointer">
            <input type="checkbox" data-cherry-pick-target="selectAll"
                   data-action="cherry-pick#toggleAll"
                   class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
            Select all
          </label>
        </div>
        <div class="divide-y divide-gray-100 dark:divide-gray-700 max-h-[500px] overflow-y-auto" data-cherry-pick-target="commitList">
          <% @commits.each do |commit| %>
            <div class="px-4 py-2 hover:bg-gray-50 dark:hover:bg-gray-750 flex items-center gap-3 group">
              <input type="checkbox"
                     data-hash="<%= commit[:full_hash] %>"
                     data-action="cherry-pick#toggleCommit"
                     class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 shrink-0">
              <div class="flex items-center gap-2 min-w-0 flex-1">
                <button data-hash="<%= commit[:full_hash] %>"
                        data-action="cherry-pick#previewCommit"
                        class="text-xs font-mono text-indigo-600 dark:text-indigo-400 hover:underline shrink-0 cursor-pointer">
                  <%= commit[:short_hash] %>
                </button>
                <span class="text-sm text-gray-700 dark:text-gray-300 truncate">
                  <% if commit[:factory] %>
                    <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-700 dark:bg-purple-900 dark:text-purple-300 mr-1">factory</span>
                  <% end %>
                  <%= commit[:message] %>
                </span>
              </div>
              <time class="text-xs text-gray-400 dark:text-gray-500 shrink-0" title="<%= commit[:date] %>">
                <%= commit[:date].to_s.split(" ").first %>
              </time>
            </div>
          <% end %>
          <% if @commits.empty? %>
            <div class="px-4 py-8 text-center text-gray-400 dark:text-gray-500">
              <p class="text-lg mb-2">âœ… All caught up!</p>
              <p class="text-sm">No commits ahead of production/main</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Preview panel -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 hidden"
           data-cherry-pick-target="preview">
        <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">ğŸ” Commit Preview</h2>
          <button data-action="cherry-pick#closePreview" class="text-sm text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">Close</button>
        </div>
        <div class="p-4 overflow-x-auto" data-cherry-pick-target="previewContent">
        </div>
      </div>

      <!-- Results panel -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 hidden"
           data-cherry-pick-target="results">
        <div class="px-4 py-3 border-b border-gray-200 dark:border-gray-700">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">ğŸ“Š Results</h2>
        </div>
        <div class="p-4" data-cherry-pick-target="resultsContent">
        </div>
      </div>
    </div>

    <!-- Right sidebar: actions -->
    <div class="space-y-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4 space-y-3 sticky top-4">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">âš¡ Actions</h3>

        <button data-cherry-pick-target="dryRunBtn"
                data-action="cherry-pick#dryRun"
                disabled
                class="w-full px-4 py-2 text-sm font-medium rounded-lg border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
          ğŸ§ª Dry Run
        </button>

        <button data-cherry-pick-target="executeBtn"
                data-action="cherry-pick#execute"
                disabled
                class="w-full px-4 py-2 text-sm font-medium rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
          ğŸ’ Cherry-Pick
        </button>

        <button data-cherry-pick-target="verifyBtn"
                data-action="cherry-pick#verify"
                class="w-full px-4 py-2 text-sm font-medium rounded-lg bg-green-600 text-white hover:bg-green-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors hidden">
          ğŸ§ª Verify (Run Tests)
        </button>

        <hr class="border-gray-200 dark:border-gray-700">

        <div class="text-xs text-gray-500 dark:text-gray-400 space-y-1">
          <p><strong>Flow:</strong></p>
          <ol class="list-decimal list-inside space-y-0.5">
            <li>Select commits</li>
            <li>Preview diffs (click hash)</li>
            <li>Dry Run to check conflicts</li>
            <li>Cherry-Pick to apply</li>
            <li>Verify runs production tests</li>
          </ol>
        </div>

        <hr class="border-gray-200 dark:border-gray-700">

        <div class="text-xs text-gray-500 dark:text-gray-400">
          <p><strong>Target:</strong> ~/clawdeck (production)</p>
          <p><strong>Source:</strong> playground (this repo)</p>
        </div>
      </div>
    </div>
  </div>
</div>
