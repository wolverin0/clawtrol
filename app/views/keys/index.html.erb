<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-content font-display flex items-center gap-2">
      ğŸ” API Keys
    </h1>
    <p class="text-sm text-content-muted mt-1">
      Keys are saved to <code class="text-xs bg-bg-elevated px-1.5 py-0.5 rounded">~/.openclaw/.env</code> (chmod 600). Never share keys via chat.
    </p>
  </div>

  <% if flash[:notice] %>
    <div class="mb-4 p-3 bg-green-500/15 border border-green-500/30 rounded-lg text-sm text-green-300">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_with url: keys_path, method: :patch, class: "space-y-4" do |f| %>
    <% @providers.each do |provider| %>
      <div class="bg-bg-card border border-border rounded-lg p-4">
        <div class="flex items-center justify-between mb-2">
          <label class="text-sm font-semibold text-content" for="keys_<%= provider[:key] %>">
            <%= provider[:label] %>
          </label>
          <% if provider[:masked] %>
            <span class="text-xs text-content-muted font-mono bg-bg-elevated px-2 py-0.5 rounded">
              <%= provider[:masked] %>
            </span>
          <% else %>
            <span class="text-xs text-amber-400">not set</span>
          <% end %>
        </div>
        <input
          type="password"
          name="keys[<%= provider[:key] %>]"
          id="keys_<%= provider[:key] %>"
          placeholder="<%= provider[:placeholder].presence || 'Paste new key to update...' %>"
          autocomplete="off"
          class="w-full text-sm bg-bg-elevated border border-border rounded-lg px-3 py-2 text-content placeholder-content-muted focus:outline-none focus:ring-2 focus:ring-accent/50 font-mono"
        >
        <p class="text-xs text-content-muted mt-1"><code><%= provider[:key] %></code></p>
      </div>
    <% end %>

    <div class="pt-4">
      <button type="submit"
        class="w-full px-4 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent/90 transition-colors text-sm">
        ğŸ’¾ Save Keys
      </button>
    </div>
  <% end %>
</div>
