<%= stylesheet_link_tag "xterm", "data-turbo-track": "reload" %>

<div class="flex flex-col h-[calc(100vh-4rem)]" data-controller="web-terminal">
  <%# Terminal header bar %>
  <div class="flex items-center justify-between px-4 py-2 bg-bg-elevated border-b border-border">
    <div class="flex items-center gap-3">
      <div class="flex items-center gap-1.5">
        <span class="w-3 h-3 rounded-full bg-red-500 opacity-75"></span>
        <span class="w-3 h-3 rounded-full bg-yellow-500 opacity-75"></span>
        <span class="w-3 h-3 rounded-full bg-green-500 opacity-75"></span>
      </div>
      <h1 class="text-sm font-medium text-content">
        ğŸ–¥ï¸ Web Terminal
      </h1>
    </div>

    <div class="flex items-center gap-3">
      <%# Connection status %>
      <div data-web-terminal-target="status" class="flex items-center text-xs text-content-muted">
        <span class="status-dot w-2 h-2 rounded-full bg-yellow-500 inline-block mr-1.5"></span>
        <span class="status-text">Connecting...</span>
      </div>

      <%# Clear button %>
      <button
        data-action="click->web-terminal#clearTerminal"
        class="text-xs px-2 py-1 rounded bg-bg-hover text-content-muted hover:text-content hover:bg-bg-elevated transition-colors"
        title="Clear terminal">
        ğŸ—‘ï¸ Clear
      </button>
    </div>
  </div>

  <%# Terminal container %>
  <div
    data-web-terminal-target="container"
    class="flex-1 bg-[#0d1117] p-1 overflow-hidden"
    style="min-height: 300px;">
  </div>
</div>
