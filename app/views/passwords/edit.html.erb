<% content_for :title, "Reset password" %>
<div class="max-w-md mx-auto">
  <div class="text-left max-w-sm mb-6">
    <h1 class="text-2xl tracking-tight mb-4 text-content font-display">Update your password</h1>
    <p class="text-md text-content-secondary -mt-2 mb-4">Enter your new password below.</p>
  </div>

  <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-2 font-normal mb-6", html: { autocomplete: "off" } do |form| %>
    <div class="isolate -space-y-px rounded-md">
      <div class="relative bg-bg-elevated rounded-t-md px-3 pb-1.5 pt-2.5 ring-1 ring-inset ring-border focus-within:z-10 focus-within:ring-1 focus-within:ring-accent">
        <%= form.label :password, "New password", class: "block text-xs font-medium text-content-muted" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72, class: "block w-full border-0 p-0 text-content placeholder:text-content-muted focus:ring-0 text-sm leading-6 bg-transparent" %>
      </div>
      <div class="relative bg-bg-elevated rounded-b-md px-3 pb-1.5 pt-2.5 ring-1 ring-inset ring-border focus-within:z-10 focus-within:ring-1 focus-within:ring-accent">
        <%= form.label :password_confirmation, "Confirm password", class: "block text-xs font-medium text-content-muted" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm new password", maxlength: 72, class: "block w-full border-0 p-0 text-content placeholder:text-content-muted focus:ring-0 text-sm leading-6 bg-transparent" %>
      </div>
    </div>
    <div class="pt-3 font-medium">
      <%= form.submit "Update password", class: "cursor-pointer inline-flex items-center space-x-2 p-3 bg-accent text-content rounded-md hover:bg-accent-hover transition-colors duration-200 text-xs font-semibold" %>
    </div>
  <% end %>
</div>
