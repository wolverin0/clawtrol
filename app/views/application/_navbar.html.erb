<%# Navbar for non-board pages (settings, etc.) - simplified design %>
<header class="flex-shrink-0 bg-bg-base border-b border-border">
  <div class="flex items-center justify-between px-4 md:px-6 py-2.5">
    <%# Left section: Logo + Back to board + Nav icons %>
    <div class="flex items-center gap-3">
      <% if authenticated? %>
        <% last_board = session[:last_board_id] && current_user.boards.order(position: :asc).find_by(id: session[:last_board_id]) %>
        <%= link_to last_board ? board_path(last_board) : boards_path, class: "flex items-center gap-2 text-sm text-content-secondary hover:text-content transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
            <path fill-rule="evenodd" d="M17 10a.75.75 0 0 1-.75.75H5.612l4.158 3.96a.75.75 0 1 1-1.04 1.08l-5.5-5.25a.75.75 0 0 1 0-1.08l5.5-5.25a.75.75 0 1 1 1.04 1.08L5.612 9.25H16.25A.75.75 0 0 1 17 10Z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <span class="text-base md:text-lg font-semibold text-content font-display">ğŸ¦ ClawTrol</span>

        <%# Quick Nav Icons %>
        <%= link_to command_path,
            class: "hidden md:flex w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated items-center justify-center transition-colors",
            title: "Command Center" do %>
          ğŸ®
        <% end %>
        <%= link_to workflows_path,
            class: "hidden md:flex w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated items-center justify-center transition-colors",
            title: "Workflows" do %>
          ğŸ”€
        <% end %>
        <%= link_to cronjobs_path,
            class: "hidden md:flex w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated items-center justify-center transition-colors",
            title: "Cron Jobs" do %>
          ğŸ•
        <% end %>
        <%= link_to analytics_path,
            class: "hidden md:flex w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated items-center justify-center transition-colors",
            title: "Analytics" do %>
          ğŸ“Š
        <% end %>
        <%= link_to tokens_path,
            class: "hidden md:flex w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated items-center justify-center transition-colors",
            title: "Tokens" do %>
          ğŸª™
        <% end %>
        <%= link_to nightshift_path,
            class: "hidden md:flex w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated items-center justify-center transition-colors",
            title: "Nightshift" do %>
          ğŸŒ™
        <% end %>
        <%= link_to factory_path,
            class: "hidden md:flex w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated items-center justify-center transition-colors",
            title: "Factory" do %>
          ğŸ­
        <% end %>
        <%= link_to showcases_path,
            class: "hidden md:flex w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated items-center justify-center transition-colors",
            title: "Showcase" do %>
          ğŸ†
        <% end %>

        <%# Agent Personas dropdown %>
        <div class="hidden md:block relative" data-controller="dropdown">
          <button type="button"
                  data-dropdown-target="button"
                  data-action="click->dropdown#toggle"
                  class="flex items-center gap-1 w-8 h-8 rounded-md text-content-muted hover:text-content hover:bg-bg-elevated justify-center transition-colors cursor-pointer"
                  title="Agent Personas">
            ğŸ¤–
          </button>
          <div data-dropdown-target="menu"
               class="hidden absolute left-0 top-full mt-1 w-44 bg-bg-surface rounded-lg shadow-lg border border-border overflow-hidden z-50">
            <div class="py-1">
              <%= link_to agent_personas_path,
                  class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
                ğŸ§  Agent Personas
              <% end %>
              <%= link_to roster_agent_personas_path,
                  class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
                ğŸ“‹ Roster
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <span class="text-base md:text-lg font-semibold text-content font-display">ğŸ¦ ClawTrol</span>
        <% end %>
      <% end %>
    </div>

    <%# Center section: Page title %>
    <div class="flex items-center gap-2">
      <% if content_for?(:breadcrumb_standalone) %>
        <span class="text-sm font-semibold text-content font-display"><%= yield :breadcrumb_standalone %></span>
      <% end %>
    </div>

    <%# Right section: Controls %>
    <div class="flex items-center gap-2">
      <%# Mobile hamburger menu %>
      <% if authenticated? %>
        <%= render "shared/mobile_nav" %>
      <% end %>
      <%# Flash messages (compact) %>
      <% if notice.present? %>
        <div data-controller="flash" class="hidden md:block py-1 px-2.5 bg-status-success/20 text-status-success text-xs font-medium rounded-md">
          <%= notice %>
        </div>
      <% end %>
      <% if alert.present? %>
        <div data-controller="flash" class="hidden md:block py-1 px-2.5 bg-status-error/20 text-status-error text-xs font-medium rounded-md">
          <%= alert %>
        </div>
      <% end %>

      <% if authenticated? %>
        <%# User avatar dropdown %>
        <div class="relative" data-controller="dropdown">
          <button type="button"
                  data-dropdown-target="button"
                  data-action="click->dropdown#toggle"
                  class="flex items-center cursor-pointer"
                  aria-expanded="false"
                  aria-haspopup="true">
            <div class="w-8 h-8 rounded-md overflow-hidden bg-bg-surface flex items-center justify-center">
              <% if current_user.has_avatar? %>
                <%= image_tag current_user.avatar_source, class: "w-full h-full object-cover", alt: "Your avatar" %>
              <% else %>
                <svg class="w-4 h-4 text-content-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              <% end %>
            </div>
          </button>

          <div data-dropdown-target="menu"
               class="hidden absolute right-0 top-full mt-1 w-48 bg-bg-surface rounded-lg shadow-lg border border-border overflow-hidden z-50">
            <div class="px-3 py-2.5 bg-bg-elevated border-b border-border">
              <p class="text-xs font-medium text-content truncate"><%= current_user.email_address.split('@').first %></p>
              <% if current_user.agent_last_active_at.present? %>
                <p class="text-xs text-content-muted flex items-center gap-1">
                  <%= current_user.agent_emoji || "ğŸ¦" %>
                  <span><%= current_user.agent_name || 'Agent' %></span>
                  <% if current_user.agent_last_active_at > 5.minutes.ago %>
                    <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                  <% end %>
                </p>
              <% end %>
            </div>
            <div class="py-1">
              <%= link_to dashboard_path, class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
                ğŸ“Š Dashboard
              <% end %>
              <%= link_to analytics_path, class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
                ğŸ“ˆ Analytics
              <% end %>
              <%= link_to settings_path, class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Settings
              <% end %>
              <div class="border-t border-border my-1"></div>
              <%= link_to "https://github.com/puntofutura/clawtrol",
                  target: "_blank",
                  rel: "noopener noreferrer",
                  class: "flex items-center gap-2 px-3 py-2 text-xs text-content-secondary hover:bg-bg-elevated transition-colors" do %>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                ClawTrol on GitHub
              <% end %>
              <div class="border-t border-border my-1"></div>
              <%= link_to session_path,
                  method: :delete,
                  data: { turbo_method: :delete },
                  class: "flex items-center gap-2 px-3 py-2 text-xs text-accent hover:bg-bg-elevated transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Sign out
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign in", new_session_path, class: "px-3 py-1.5 text-xs font-medium text-content-secondary hover:text-content transition-colors" %>
      <% end %>
    </div>
  </div>
</header>
