<% content_for :title, "Sign up" %>
<div class="max-w-md mx-auto">
  <div class="text-left max-w-sm mb-6">
    <h1 class="text-2xl tracking-tight mb-4">Create an account</h1>
    <p class="text-md text-stone-400 dark:text-white/50 -mt-2 mb-4">Sign up to start organizing your tasks with ClawDeck.</p>
  </div>

  <% if User.github_oauth_enabled? %>
    <%= button_to "/auth/github", method: :post, class: "w-full cursor-pointer inline-flex items-center justify-center gap-2 p-3 bg-stone-800 dark:bg-white text-white dark:text-stone-900 rounded-sm hover:bg-stone-700 dark:hover:bg-stone-200 transition-colors duration-200 text-xs font-semibold mb-6", data: { turbo: false } do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
      </svg>
      Continue with GitHub
    <% end %>

    <div class="relative mb-6">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-stone-200 dark:border-white/20"></div>
      </div>
      <div class="relative flex justify-center text-xs">
        <span class="px-2 bg-stone-50 dark:bg-stone-900 text-stone-400 dark:text-white/50">or</span>
      </div>
    </div>
  <% end %>

  <%= form_with model: @user, url: registration_path, class: "space-y-2 font-normal mb-6", html: { autocomplete: "off" } do |form| %>
    <% if @user.errors.any? %>
      <div class="mb-4 p-3 bg-red-50 dark:bg-red-900/30 text-red-600 dark:text-red-400 text-xs rounded-md">
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="isolate -space-y-px rounded-md">
      <div class="relative bg-white dark:bg-white/5 rounded-t-md px-3 pb-1.5 pt-2.5 ring-1 ring-inset ring-stone-200 dark:ring-white/20 focus-within:z-10 focus-within:ring-1 focus-within:ring-stone-400 dark:focus-within:ring-stone-300">
        <%= form.label :email_address, "Email", class: "block text-xs font-medium text-stone-500 dark:text-white/50" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "name@domain.com", class: "block w-full border-0 p-0 text-stone-900 dark:text-stone-100 placeholder:text-stone-400 dark:placeholder:text-white/30 focus:ring-0 text-sm leading-6 bg-transparent" %>
      </div>
      <div class="relative bg-white dark:bg-white/5 px-3 pb-1.5 pt-2.5 ring-1 ring-inset ring-stone-200 dark:ring-white/20 focus-within:z-10 focus-within:ring-1 focus-within:ring-stone-400 dark:focus-within:ring-stone-300">
        <%= form.label :password, "Password", class: "block text-xs font-medium text-stone-500 dark:text-white/50" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter password", class: "block w-full border-0 p-0 text-stone-900 dark:text-stone-100 placeholder:text-stone-400 dark:placeholder:text-white/30 focus:ring-0 text-sm leading-6 bg-transparent" %>
      </div>
      <div class="relative bg-white dark:bg-white/5 rounded-b-md px-3 pb-1.5 pt-2.5 ring-1 ring-inset ring-stone-200 dark:ring-white/20 focus-within:z-10 focus-within:ring-1 focus-within:ring-stone-400 dark:focus-within:ring-stone-300">
        <%= form.label :password_confirmation, "Confirm password", class: "block text-xs font-medium text-stone-500 dark:text-white/50" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm password", class: "block w-full border-0 p-0 text-stone-900 dark:text-stone-100 placeholder:text-stone-400 dark:placeholder:text-white/30 focus:ring-0 text-sm leading-6 bg-transparent" %>
      </div>
    </div>
    <div class="pt-3 font-medium flex items-center justify-between">
      <%= form.submit "Create account", class: "cursor-pointer inline-flex items-center space-x-2 p-3 bg-stone-600 dark:bg-white text-white dark:text-stone-900 rounded-sm hover:bg-stone-500 dark:hover:bg-stone-200 hover:text-white dark:hover:text-stone-900 transition-colors duration-200 text-xs font-semibold" %>
      <%= link_to "Already have an account?", new_session_path, class: "text-xs text-stone-400 dark:text-white/50 hover:text-stone-600 dark:hover:text-white/70 transition-colors" %>
    </div>
  <% end %>
</div>
