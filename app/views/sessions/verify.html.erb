<% content_for :title, "Verify" %>
<div class="max-w-md mx-auto">
  <div class="text-center mb-6">
    <h1 class="text-2xl tracking-tight">Enter verification code</h1>
    <p class="mt-4 text-sm text-stone-500 dark:text-white/50">We sent a 6-digit code to <strong class="text-stone-700 dark:text-stone-100"><%= @email %></strong>.<br/>
      It will expire in 15 minutes.</p>
  </div>
  <%= form_with url: verify_session_path, method: :post, class: "space-y-2 font-normal mb-6", html: { autocomplete: "off" } do |form| %>
    <%= form.hidden_field :email, value: @email %>
    <div class="isolate -space-y-px rounded-md">
      <div class="relative bg-white dark:bg-white/5 rounded-md px-3 pb-1.5 pt-2.5 ring-1 ring-inset ring-stone-200 dark:ring-white/20 focus-within:z-10 focus-within:ring-1 focus-within:ring-stone-400 dark:focus-within:ring-stone-300">
        <%= form.label :code, "Verification code", class: "block text-xs font-medium text-stone-500 dark:text-white/50" %>
        <%= form.text_field :code, required: true, autofocus: true, placeholder: "Enter 6-digit code", maxlength: 6, pattern: "[0-9]{6}", class: "block w-full border-0 p-0 text-stone-900 dark:text-stone-100 placeholder:text-stone-400 dark:placeholder:text-white/30 focus:ring-0 text-2xl tracking-widest font-mono text-left text-sm leading-6" %>
      </div>
    </div>
    <div class="pt-3 font-medium flex items-center justify-between">
      <%= form.submit "Verify and sign in", class: "cursor-pointer inline-flex items-center space-x-2 p-3 bg-stone-600 dark:bg-white text-white dark:text-stone-900 rounded-sm hover:bg-stone-500 dark:hover:bg-stone-200 hover:text-white dark:hover:text-stone-900 transition-colors duration-200 text-xs font-semibold" %>
      <%= link_to "â† Back", new_session_path, class: "text-xs text-stone-400 dark:text-white/50 hover:text-stone-600 dark:hover:text-white/70 transition-colors" %>
    </div>
  <% end %>
</div>
