<% content_for :skip_container, true %>

<div class="min-h-screen bg-white flex flex-col">
  <!-- Main content -->
  <div class="flex-1 flex items-center justify-center px-6">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Logo -->
      <div class="mb-8">
        <%= image_tag "clawdecklogo.svg", alt: "ClawDeck", class: "h-12 w-auto mx-auto" %>
      </div>
      
      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl font-semibold text-gray-900 tracking-tight mb-6">
        Mission control for your AI agents
      </h1>
      
      <!-- Subheadline -->
      <p class="text-xl text-gray-500 mb-10 max-w-lg mx-auto">
        Open source dashboard to manage, monitor, and orchestrate your AI workforce.
      </p>
      
      <!-- CTA buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <%= link_to new_session_path, class: "inline-flex items-center px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-800 transition-colors" do %>
          Get started
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
        
        <%= link_to "https://github.com/clawdeckio/clawdeck", target: "_blank", class: "inline-flex items-center px-6 py-3 text-gray-700 font-medium hover:text-gray-900 transition-colors" do %>
          <svg class="mr-2 w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
          View on GitHub
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Footer -->
  <footer class="py-8 text-center text-sm text-gray-400">
    <p>Open source under MIT License</p>
  </footer>
</div>
