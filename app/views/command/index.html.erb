<div data-controller="command" class="min-h-screen bg-bg-base text-content p-6 space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between pb-4 border-b border-border">
    <h1 class="text-2xl font-bold tracking-tight flex items-center gap-3 text-white">
      üéõÔ∏è COMMAND CENTER
    </h1>
    <div data-command-target="gatewayStatus">
      <span class="inline-flex items-center gap-2 px-2 py-1 rounded-full bg-gray-500/10 text-gray-400 text-xs font-medium border border-gray-500/20">
        <span class="w-1.5 h-1.5 rounded-full bg-gray-500"></span>
        CONNECTING...
      </span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Main Area: Active Agents -->
    <div class="lg:col-span-3 space-y-4">
      <h2 class="text-sm font-semibold text-content-muted uppercase tracking-wider flex items-center gap-2">
        Active Agents
        <span class="w-full h-px bg-white/5"></span>
      </h2>

      <!-- Empty State -->
      <div data-command-target="emptyState" class="hidden flex flex-col items-center justify-center py-20 border border-dashed border-white/10 rounded-lg text-content-muted">
        <div class="text-4xl mb-4 opacity-50">üí§</div>
        <p>No active agents</p>
      </div>

      <!-- Agent Grid -->
      <div data-command-target="activeAgents" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
        <!-- Cards injected by JS -->
      </div>
    </div>

    <!-- Sidebar: System Status -->
    <div class="space-y-6">
      <!-- Models -->
      <div class="bg-bg-surface border border-border rounded-lg p-4">
        <h3 class="text-xs font-bold text-content-muted uppercase mb-3">Model Status</h3>
        <div data-command-target="modelStatus" class="space-y-1">
          <div class="text-xs text-content-muted italic">Loading...</div>
        </div>
      </div>

      <!-- Stats -->
      <div class="bg-bg-surface border border-border rounded-lg p-4">
        <h3 class="text-xs font-bold text-content-muted uppercase mb-3">System Health</h3>
        <div data-command-target="stats" class="space-y-1">
           <div class="text-xs text-content-muted italic">Loading...</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom: Recent Completions -->
  <div class="pt-4">
    <h2 class="text-sm font-semibold text-content-muted uppercase tracking-wider mb-4 flex items-center gap-2">
      Recent Completions
      <span class="w-full h-px bg-white/5"></span>
    </h2>
    <div class="bg-bg-surface border border-border rounded-lg overflow-hidden">
      <div class="grid grid-cols-12 gap-4 px-4 py-2 bg-white/5 text-xs font-bold text-content-muted uppercase border-b border-border">
        <div class="col-span-4">Agent</div>
        <div class="col-span-3">Model</div>
        <div class="col-span-2">Duration</div>
        <div class="col-span-2">Tokens</div>
        <div class="col-span-1 text-right">Result</div>
      </div>
      <div data-command-target="recentCompletions" class="px-4">
         <div class="py-4 text-center text-xs text-content-muted italic">Loading history...</div>
      </div>
    </div>
  </div>
</div>
