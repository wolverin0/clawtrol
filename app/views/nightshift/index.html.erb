<style>
  :root {
    --terminal-green: #00FF41;
    --terminal-amber: #FFB000;
    --terminal-red: #FF3131;
    --terminal-cyan: #00D4FF;
    --terminal-blue: #2f81f7;
    --terminal-purple: #a371f7;
  }

  .ns-header {
    padding: 1.5rem 2rem 1rem;
    display: flex; justify-content: space-between; align-items: center;
  }
  .ns-brand {
    font-size: 1.5rem; font-weight: 700; color: var(--terminal-green);
    display: flex; align-items: center; gap: 0.75rem;
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.3);
    font-family: 'SF Mono', 'Fira Code', monospace;
  }
  .ns-brand-icon { animation: ns-pulse 3s infinite; }
  @keyframes ns-pulse {
    0%, 100% { opacity: 1; } 50% { opacity: 0.7; }
  }
  .ns-meta { text-align: right; font-size: 0.85rem; color: var(--text-muted, #8B949E); }
  .ns-date { color: var(--terminal-cyan); font-weight: 600; }

  .ns-grid {
    display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem; padding: 1rem 2rem; max-width: 1400px; margin: 0 auto;
    padding-bottom: 200px;
  }

  .ns-card {
    background: var(--bg-card, #161B22); border: 1px solid var(--border, #30363D);
    border-radius: 8px; padding: 1.25rem; cursor: pointer;
    transition: all 0.2s; display: flex; flex-direction: column; gap: 0.75rem;
    font-family: 'SF Mono', 'Fira Code', monospace;
  }
  .ns-card:hover { border-color: var(--text-muted, #8B949E); transform: translateY(-2px); }
  .ns-card.selected {
    border-color: var(--terminal-green); background: rgba(0, 255, 65, 0.03);
    box-shadow: 0 0 15px rgba(0, 255, 65, 0.1);
  }

  .ns-card-header { display: flex; justify-content: space-between; align-items: flex-start; gap: 1rem; }
  .ns-checkbox {
    width: 24px; height: 24px; border: 2px solid var(--border, #30363D);
    border-radius: 4px; display: flex; align-items: center; justify-content: center;
    flex-shrink: 0; transition: all 0.2s; background: var(--bg-dark, #0A0E14);
  }
  .ns-card.selected .ns-checkbox { border-color: var(--terminal-green); background: var(--terminal-green); }
  .ns-checkmark { color: var(--bg-dark, #0A0E14); opacity: 0; font-weight: bold; transition: all 0.2s; }
  .ns-card.selected .ns-checkmark { opacity: 1; }

  .ns-title { font-size: 1rem; font-weight: 600; color: var(--text, #C9D1D9); }
  .ns-desc { font-size: 0.85rem; color: var(--text-muted, #8B949E); line-height: 1.5; flex-grow: 1; }

  .ns-footer {
    display: flex; justify-content: space-between; align-items: center;
    margin-top: 0.5rem; padding-top: 0.75rem; border-top: 1px solid rgba(48, 54, 61, 0.5);
  }
  .ns-badge {
    font-size: 0.7rem; padding: 0.2rem 0.5rem; border-radius: 4px;
    text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; border: 1px solid transparent;
  }
  .ns-badge-codex { color: var(--terminal-cyan); border-color: rgba(0, 212, 255, 0.3); background: rgba(0, 212, 255, 0.1); }
  .ns-badge-gemini { color: var(--terminal-green); border-color: rgba(0, 255, 65, 0.3); background: rgba(0, 255, 65, 0.1); }
  .ns-badge-opus { color: var(--terminal-purple); border-color: rgba(163, 113, 247, 0.3); background: rgba(163, 113, 247, 0.1); }
  .ns-badge-glm { color: var(--terminal-amber); border-color: rgba(255, 176, 0, 0.3); background: rgba(255, 176, 0, 0.1); }
  .ns-badge-status { margin-left: 8px; }
  .ns-badge-pending { color: var(--terminal-amber); border-color: rgba(255, 176, 0, 0.3); background: rgba(255, 176, 0, 0.1); }
  .ns-badge-running { color: var(--terminal-blue); border-color: rgba(47, 129, 247, 0.3); background: rgba(47, 129, 247, 0.1); }
  .ns-badge-completed { color: var(--terminal-green); border-color: rgba(0, 255, 65, 0.3); background: rgba(0, 255, 65, 0.1); }
  .ns-time { font-size: 0.8rem; color: var(--text-muted, #8B949E); }

  .ns-panel {
    position: fixed; bottom: 0; left: 0; right: 0;
    background: var(--bg-panel, #0D1117); border-top: 1px solid var(--border, #30363D);
    padding: 1rem 2rem; z-index: 200;
    box-shadow: 0 -10px 30px rgba(0, 0, 0, 0.5);
    display: flex; justify-content: space-between; align-items: center;
    backdrop-filter: blur(10px); font-family: 'SF Mono', 'Fira Code', monospace;
  }
  .ns-stats { display: flex; gap: 2rem; align-items: center; }
  .ns-stat-label { font-size: 0.7rem; color: var(--text-muted, #8B949E); text-transform: uppercase; letter-spacing: 1px; }
  .ns-stat-value { font-size: 1.2rem; font-weight: 700; }
  .ns-stat-highlight { color: var(--terminal-cyan); }

  .ns-launch {
    background: var(--terminal-green); color: #0A0E14; border: none;
    padding: 0.8rem 1.5rem; font-weight: 700; font-size: 0.9rem;
    text-transform: uppercase; letter-spacing: 1px; border-radius: 4px;
    cursor: pointer; transition: all 0.3s; font-family: inherit;
  }
  .ns-launch:hover { box-shadow: 0 0 25px rgba(0, 255, 65, 0.6); }
  .ns-launch:disabled { background: var(--border, #30363D); color: var(--text-muted, #8B949E); cursor: not-allowed; box-shadow: none; }

  .ns-toggle-all {
    background: transparent; border: 1px solid var(--text-muted, #8B949E);
    color: var(--text-muted, #8B949E); padding: 0.5rem 1rem; border-radius: 4px;
    font-family: inherit; font-size: 0.8rem; cursor: pointer;
  }
  .ns-toggle-all:hover { border-color: var(--text, #C9D1D9); color: var(--text, #C9D1D9); }

  @media (max-width: 768px) {
    .ns-header { padding: 1rem; }
    .ns-brand { font-size: 1.1rem; }
    .ns-meta { display: none; }
    .ns-grid { padding: 1rem; gap: 1rem; }
    .ns-panel { flex-direction: column; gap: 1rem; padding: 0.75rem 1rem; }
    .ns-stats { width: 100%; justify-content: space-between; }
    .ns-launch { width: 100%; text-align: center; }
  }
</style>

<div data-controller="nightshift">
  <div class="ns-header">
    <div class="ns-brand">
      <span class="ns-brand-icon">üåë</span>
      NIGHTSHIFT
      <span style="color: var(--text-muted); font-weight: 400; font-size: 0.8em;">// MISSION CONTROL</span>
    </div>
    <div class="ns-meta">
      <div class="ns-date"><%= Date.today.iso8601 %></div>
      <div>STATUS: <span data-nightshift-target="systemStatus">ONLINE</span></div>
    </div>
  </div>

  <div class="ns-grid" data-nightshift-target="grid">
    <% @missions.each do |mission| %>
      <% selection = @selections[mission[:id]] %>
      <% is_selected = selection&.enabled? %>
      <div class="ns-card <%= 'selected' if is_selected %>"
           data-action="click->nightshift#toggle"
           data-mission-id="<%= mission[:id] %>"
           data-mission-time="<%= mission[:time] %>"
           data-nightshift-target="card">
        <div class="ns-card-header">
          <div class="ns-checkbox"><span class="ns-checkmark">‚úì</span></div>
          <div>
            <div class="ns-title">
              <%= mission[:icon] %> <%= mission[:title] %>
              <% if selection %>
                <span class="ns-badge ns-badge-status ns-badge-<%= selection.status %>"><%= selection.status %></span>
              <% end %>
            </div>
          </div>
        </div>
        <div class="ns-desc"><%= mission[:desc] %></div>
        <div class="ns-footer">
          <span class="ns-badge ns-badge-<%= mission[:model] %>"><%= mission[:model] %></span>
          <span class="ns-time">‚è± ~<%= mission[:time] %>min</span>
        </div>
      </div>
    <% end %>
  </div>

  <div class="ns-panel">
    <div class="ns-stats">
      <button type="button" class="ns-toggle-all" data-action="click->nightshift#toggleAll">Select All</button>
      <div>
        <div class="ns-stat-label">Missions</div>
        <div class="ns-stat-value"><span data-nightshift-target="count">0</span> / <%= @missions.size %></div>
      </div>
      <div>
        <div class="ns-stat-label">Est. Time</div>
        <div class="ns-stat-value ns-stat-highlight" data-nightshift-target="time">0m</div>
      </div>
    </div>
    <button type="button" class="ns-launch" data-action="click->nightshift#launch" data-nightshift-target="launchButton" disabled>
      SELECT MISSIONS
    </button>
  </div>
</div>
