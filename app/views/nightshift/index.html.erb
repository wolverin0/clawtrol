<style>
  :root {
    --terminal-green: #00FF41;
    --terminal-amber: #FFB000;
    --terminal-red: #FF3131;
    --terminal-cyan: #00D4FF;
    --terminal-blue: #2f81f7;
    --terminal-purple: #a371f7;
  }

  .ns-header {
    padding: 1.5rem 2rem 1rem;
    display: flex; justify-content: space-between; align-items: center;
  }
  .ns-brand {
    font-size: 1.5rem; font-weight: 700; color: var(--terminal-green);
    display: flex; align-items: center; gap: 0.75rem;
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.3);
    font-family: 'SF Mono', 'Fira Code', monospace;
  }
  .ns-brand-icon { animation: ns-pulse 3s infinite; }
  @keyframes ns-pulse {
    0%, 100% { opacity: 1; } 50% { opacity: 0.7; }
  }
  .ns-meta { text-align: right; font-size: 0.85rem; color: var(--text-muted, #8B949E); }
  .ns-date { color: var(--terminal-cyan); font-weight: 600; }

  .ns-toolbar {
    display: flex; gap: 0.5rem; padding: 0 2rem 0.5rem; flex-wrap: wrap; align-items: center;
  }
  .ns-filter-btn {
    background: transparent; border: 1px solid var(--border, #30363D);
    color: var(--text-muted, #8B949E); padding: 0.3rem 0.7rem; border-radius: 4px;
    font-family: 'SF Mono', 'Fira Code', monospace; font-size: 0.75rem; cursor: pointer;
    transition: all 0.2s;
  }
  .ns-filter-btn:hover, .ns-filter-btn.active { border-color: var(--terminal-cyan); color: var(--terminal-cyan); }
  .ns-add-btn {
    background: rgba(0, 255, 65, 0.1); border: 1px solid rgba(0, 255, 65, 0.3);
    color: var(--terminal-green); padding: 0.3rem 0.7rem; border-radius: 4px;
    font-family: 'SF Mono', 'Fira Code', monospace; font-size: 0.75rem; cursor: pointer;
    margin-left: auto;
  }
  .ns-add-btn:hover { background: rgba(0, 255, 65, 0.2); }

  .ns-grid {
    display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem; padding: 1rem 2rem; max-width: 1400px; margin: 0 auto;
    padding-bottom: 200px;
  }

  .ns-card {
    background: var(--bg-card, #161B22); border: 1px solid var(--border, #30363D);
    border-radius: 8px; padding: 1.25rem; cursor: pointer;
    transition: all 0.2s; display: flex; flex-direction: column; gap: 0.75rem;
    font-family: 'SF Mono', 'Fira Code', monospace;
  }
  .ns-card:hover { border-color: var(--text-muted, #8B949E); transform: translateY(-2px); }
  .ns-card.selected {
    border-color: var(--terminal-green); background: rgba(0, 255, 65, 0.03);
    box-shadow: 0 0 15px rgba(0, 255, 65, 0.1);
  }
  .ns-card.due-tonight { border-left: 3px solid var(--terminal-amber); }

  .ns-card-header { display: flex; justify-content: space-between; align-items: flex-start; gap: 1rem; }
  .ns-checkbox {
    width: 24px; height: 24px; border: 2px solid var(--border, #30363D);
    border-radius: 4px; display: flex; align-items: center; justify-content: center;
    flex-shrink: 0; transition: all 0.2s; background: var(--bg-dark, #0A0E14);
  }
  .ns-card.selected .ns-checkbox { border-color: var(--terminal-green); background: var(--terminal-green); }
  .ns-checkmark { color: var(--bg-dark, #0A0E14); opacity: 0; font-weight: bold; transition: all 0.2s; }
  .ns-card.selected .ns-checkmark { opacity: 1; }

  .ns-title { font-size: 1rem; font-weight: 600; color: var(--text, #C9D1D9); }
  .ns-desc { font-size: 0.85rem; color: var(--text-muted, #8B949E); line-height: 1.5; flex-grow: 1; }

  .ns-card-actions {
    display: flex;
    gap: 0.35rem;
    justify-content: flex-end;
  }
  .ns-icon-btn {
    border: 1px solid var(--border, #30363D);
    background: transparent;
    color: var(--text-muted, #8B949E);
    border-radius: 4px;
    padding: 0.2rem 0.45rem;
    font-size: 0.8rem;
    cursor: pointer;
  }
  .ns-icon-btn:hover { border-color: var(--terminal-cyan); color: var(--terminal-cyan); }
  .ns-icon-btn.delete:hover { border-color: var(--terminal-red); color: var(--terminal-red); }

  .ns-footer {
    display: flex; justify-content: space-between; align-items: center;
    margin-top: 0.5rem; padding-top: 0.75rem; border-top: 1px solid rgba(48, 54, 61, 0.5);
    flex-wrap: wrap; gap: 0.25rem;
  }
  .ns-badge {
    font-size: 0.7rem; padding: 0.2rem 0.5rem; border-radius: 4px;
    text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; border: 1px solid transparent;
  }
  .ns-badge-codex { color: var(--terminal-cyan); border-color: rgba(0, 212, 255, 0.3); background: rgba(0, 212, 255, 0.1); }
  .ns-badge-gemini, .ns-badge-gemini-flash { color: var(--terminal-green); border-color: rgba(0, 255, 65, 0.3); background: rgba(0, 255, 65, 0.1); }
  .ns-badge-opus { color: var(--terminal-purple); border-color: rgba(163, 113, 247, 0.3); background: rgba(163, 113, 247, 0.1); }
  .ns-badge-glm, .ns-badge-deepseek, .ns-badge-groq, .ns-badge-cerebras { color: var(--terminal-amber); border-color: rgba(255, 176, 0, 0.3); background: rgba(255, 176, 0, 0.1); }
  .ns-badge-freq {
    font-size: 0.65rem; padding: 0.15rem 0.4rem; border-radius: 3px;
    color: var(--terminal-cyan); border-color: rgba(0, 212, 255, 0.2); background: rgba(0, 212, 255, 0.05);
  }
  .ns-badge-freq.always { color: var(--terminal-amber); border-color: rgba(255, 176, 0, 0.3); background: rgba(255, 176, 0, 0.1); }
  .ns-badge-freq.weekly { color: var(--terminal-blue); border-color: rgba(47, 129, 247, 0.3); background: rgba(47, 129, 247, 0.1); }
  .ns-badge-cat {
    font-size: 0.6rem; padding: 0.1rem 0.35rem; border-radius: 3px;
    color: var(--text-muted, #8B949E); border-color: rgba(139, 148, 158, 0.2); background: rgba(139, 148, 158, 0.05);
  }
  .ns-badge-status { margin-left: 8px; }
  .ns-badge-pending { color: var(--terminal-amber); border-color: rgba(255, 176, 0, 0.3); background: rgba(255, 176, 0, 0.1); }
  .ns-badge-running { color: var(--terminal-blue); border-color: rgba(47, 129, 247, 0.3); background: rgba(47, 129, 247, 0.1); }
  .ns-badge-completed { color: var(--terminal-green); border-color: rgba(0, 255, 65, 0.3); background: rgba(0, 255, 65, 0.1); }
  .ns-time { font-size: 0.8rem; color: var(--text-muted, #8B949E); }

  .ns-panel {
    position: fixed; bottom: 0; left: 0; right: 0;
    background: var(--bg-panel, #0D1117); border-top: 1px solid var(--border, #30363D);
    padding: 1rem 2rem; z-index: 200;
    box-shadow: 0 -10px 30px rgba(0, 0, 0, 0.5);
    display: flex; justify-content: space-between; align-items: center;
    backdrop-filter: blur(10px); font-family: 'SF Mono', 'Fira Code', monospace;
  }
  .ns-stats { display: flex; gap: 2rem; align-items: center; }
  .ns-stat-label { font-size: 0.7rem; color: var(--text-muted, #8B949E); text-transform: uppercase; letter-spacing: 1px; }
  .ns-stat-value { font-size: 1.2rem; font-weight: 700; }
  .ns-stat-highlight { color: var(--terminal-cyan); }

  .ns-launch {
    background: var(--terminal-green); color: #0A0E14; border: none;
    padding: 0.8rem 1.5rem; font-weight: 700; font-size: 0.9rem;
    text-transform: uppercase; letter-spacing: 1px; border-radius: 4px;
    cursor: pointer; transition: all 0.3s; font-family: inherit;
  }
  .ns-launch:hover { box-shadow: 0 0 25px rgba(0, 255, 65, 0.6); }
  .ns-launch:disabled { background: var(--border, #30363D); color: var(--text-muted, #8B949E); cursor: not-allowed; box-shadow: none; }

  .ns-toggle-all {
    background: transparent; border: 1px solid var(--text-muted, #8B949E);
    color: var(--text-muted, #8B949E); padding: 0.5rem 1rem; border-radius: 4px;
    font-family: inherit; font-size: 0.8rem; cursor: pointer;
  }
  .ns-toggle-all:hover { border-color: var(--text, #C9D1D9); color: var(--text, #C9D1D9); }

  .ns-modal-overlay {
    display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.7); z-index: 300; align-items: center; justify-content: center;
  }
  .ns-modal-overlay.open { display: flex; }
  .ns-modal {
    background: var(--bg-card, #161B22); border: 1px solid var(--border, #30363D);
    border-radius: 8px; padding: 2rem; width: 100%; max-width: 500px;
    font-family: 'SF Mono', 'Fira Code', monospace;
    max-height: 90vh;
    overflow-y: auto;
  }
  .ns-modal h3 { color: var(--terminal-green); margin: 0 0 1.5rem; }
  .ns-modal label { display: block; color: var(--text-muted, #8B949E); font-size: 0.8rem; margin-bottom: 0.3rem; }
  .ns-modal input, .ns-modal select, .ns-modal textarea {
    width: 100%; background: var(--bg-dark, #0A0E14); border: 1px solid var(--border, #30363D);
    color: var(--text, #C9D1D9); padding: 0.5rem; border-radius: 4px; font-family: inherit;
    font-size: 0.85rem; margin-bottom: 1rem; box-sizing: border-box;
  }
  .ns-modal textarea { min-height: 80px; resize: vertical; }
  .ns-modal-actions { display: flex; gap: 0.5rem; justify-content: flex-end; }
  .ns-modal-btn {
    padding: 0.5rem 1rem; border-radius: 4px; font-family: inherit; font-size: 0.8rem;
    cursor: pointer; border: 1px solid var(--border, #30363D); background: transparent;
    color: var(--text-muted, #8B949E);
  }
  .ns-modal-btn.primary { background: var(--terminal-green); color: #0A0E14; border: none; font-weight: 600; }
  .ns-days-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0.25rem;
    margin-bottom: 1rem;
  }
  .ns-days-grid label {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    margin: 0;
    font-size: 0.75rem;
  }
  .ns-days-grid input { width: auto; margin: 0; }

  @media (max-width: 768px) {
    .ns-header { padding: 1rem; }
    .ns-brand { font-size: 1.1rem; }
    .ns-meta { display: none; }
    .ns-grid { padding: 1rem; gap: 1rem; }
    .ns-toolbar { padding: 0 1rem 0.5rem; }
    .ns-panel { flex-direction: column; gap: 1rem; padding: 0.75rem 1rem; }
    .ns-stats { width: 100%; justify-content: space-between; }
    .ns-launch { width: 100%; text-align: center; }
  }
</style>

<div data-controller="nightshift">
  <% model_options = %w[opus codex gemini gemini-flash glm deepseek groq cerebras] %>
  <% week_days = [[1, 'Mon'], [2, 'Tue'], [3, 'Wed'], [4, 'Thu'], [5, 'Fri'], [6, 'Sat'], [7, 'Sun']] %>

  <div class="ns-header">
    <div class="ns-brand">
      <span class="ns-brand-icon">üåë</span>
      NIGHTSHIFT
      <span style="color: var(--text-muted); font-weight: 400; font-size: 0.8em;">// MISSION CONTROL v2</span>
    </div>
    <div class="ns-meta">
      <div class="ns-date"><%= Date.today.iso8601 %></div>
      <div>STATUS: <span data-nightshift-target="systemStatus">ONLINE</span></div>
      <div style="font-size: 0.75rem;"><%= @due_tonight_ids.size %> due tonight</div>
    </div>
  </div>

  <div class="ns-toolbar">
    <button class="ns-filter-btn active" data-action="click->nightshift#filterAll">All</button>
    <% @categories.each do |cat| %>
      <button class="ns-filter-btn" data-action="click->nightshift#filterCategory" data-category="<%= cat %>"><%= cat %></button>
    <% end %>
    <button class="ns-add-btn" data-action="click->nightshift#openModal">+ Add Mission</button>
  </div>

  <div class="ns-grid" data-nightshift-target="grid">
    <% @missions.each do |mission| %>
      <% selection = @selections[mission.id] %>
      <% is_due = @due_tonight_ids.include?(mission.id) %>
      <% is_selected = selection&.enabled? || is_due %>
      <div class="ns-card <%= 'selected' if is_selected %> <%= 'due-tonight' if is_due %>"
           data-action="click->nightshift#toggle"
           data-mission-id="<%= mission.id %>"
           data-mission-name="<%= mission.name %>"
           data-mission-description="<%= mission.description %>"
           data-mission-icon="<%= mission.icon %>"
           data-mission-model="<%= mission.model %>"
           data-mission-time="<%= mission.estimated_minutes %>"
           data-mission-frequency="<%= mission.frequency %>"
           data-mission-days="<%= (mission.days_of_week || []).join(',') %>"
           data-mission-category="<%= mission.category %>"
           data-mission-enabled="<%= mission.enabled %>"
           data-nightshift-target="card">
        <div class="ns-card-header">
          <div class="ns-checkbox"><span class="ns-checkmark">‚úì</span></div>
          <div>
            <div class="ns-title">
              <%= mission.icon %> <%= mission.name %>
              <% if selection %>
                <span class="ns-badge ns-badge-status ns-badge-<%= selection.status %>"><%= selection.status %></span>
              <% end %>
            </div>
          </div>
        </div>

        <div class="ns-card-actions" data-action="click->nightshift#stopPropagation">
          <button type="button" class="ns-icon-btn" title="Edit mission" data-action="click->nightshift#openEditModal">‚úèÔ∏è</button>
          <%= button_to "üóëÔ∏è", nightshift_mission_path(mission), method: :delete,
              class: "ns-icon-btn delete",
              form: { data: { turbo_confirm: "Delete mission '#{mission.name}'?" } },
              data: { action: "click->nightshift#stopPropagation" } %>
        </div>

        <div class="ns-desc"><%= mission.description %></div>
        <div class="ns-footer">
          <span class="ns-badge ns-badge-<%= mission.model %>"><%= mission.model %></span>
          <span class="ns-badge ns-badge-freq <%= mission.frequency %>"><%= mission.frequency %><%= " (#{mission.days_of_week.map { |d| %w[_ Mon Tue Wed Thu Fri Sat Sun][d] }.join(',')})" if mission.frequency == 'weekly' && mission.days_of_week.present? %></span>
          <span class="ns-badge ns-badge-cat"><%= mission.category %></span>
          <span class="ns-time">‚è± ~<%= mission.estimated_minutes %>min</span>
        </div>
      </div>
    <% end %>
  </div>

  <div class="ns-panel">
    <div class="ns-stats">
      <button type="button" class="ns-toggle-all" data-action="click->nightshift#toggleAll">Select All</button>
      <div>
        <div class="ns-stat-label">Missions</div>
        <div class="ns-stat-value"><span data-nightshift-target="count">0</span> / <%= @missions.size %></div>
      </div>
      <div>
        <div class="ns-stat-label">Est. Time</div>
        <div class="ns-stat-value ns-stat-highlight" data-nightshift-target="time">0m</div>
      </div>
    </div>
    <button type="button" class="ns-launch" data-action="click->nightshift#launch" data-nightshift-target="launchButton" disabled>
      SELECT MISSIONS
    </button>
  </div>

  <div class="ns-modal-overlay" data-nightshift-target="modal" data-action="click->nightshift#overlayClose">
    <div class="ns-modal" data-action="click->nightshift#stopPropagation">
      <h3>‚ûï Add Mission</h3>
      <%= form_with url: nightshift_missions_path, method: :post, local: true do %>
        <label>Name</label>
        <input type="text" name="nightshift_mission[name]" required>

        <label>Description</label>
        <textarea name="nightshift_mission[description]"></textarea>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem;">
          <div>
            <label>Icon</label>
            <input type="text" name="nightshift_mission[icon]" value="üîß">
          </div>
          <div>
            <label>Model</label>
            <select name="nightshift_mission[model]">
              <% model_options.each do |model| %>
                <option value="<%= model %>"><%= model %></option>
              <% end %>
            </select>
          </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem;">
          <div>
            <label>Category</label>
            <select name="nightshift_mission[category]">
              <% @categories.each do |cat| %>
                <option value="<%= cat %>"><%= cat %></option>
              <% end %>
            </select>
          </div>
          <div>
            <label>Est. Minutes</label>
            <input type="number" name="nightshift_mission[estimated_minutes]" value="30">
          </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem;">
          <div>
            <label>Frequency</label>
            <select name="nightshift_mission[frequency]" data-nightshift-target="createFrequency" data-action="change->nightshift#toggleCreateDays">
              <% @frequencies.each do |freq| %>
                <option value="<%= freq %>"><%= freq %></option>
              <% end %>
            </select>
          </div>
          <div>
            <label>Created By</label>
            <select name="nightshift_mission[created_by]">
              <option value="user">user</option>
              <option value="system">system</option>
              <option value="autonomy">autonomy</option>
              <option value="saved_links">saved_links</option>
            </select>
          </div>
        </div>

        <div data-nightshift-target="createDaysWrap" style="display:none;">
          <label>Days of Week</label>
          <div class="ns-days-grid">
            <% week_days.each do |day_num, day_label| %>
              <label>
                <input type="checkbox" name="nightshift_mission[days_of_week][]" value="<%= day_num %>">
                <span><%= day_label %></span>
              </label>
            <% end %>
          </div>
        </div>

        <label>
          <input type="checkbox" name="nightshift_mission[enabled]" value="1" checked style="width:auto; margin-right:0.4rem;">Enabled
        </label>

        <div class="ns-modal-actions">
          <button type="button" class="ns-modal-btn" data-action="click->nightshift#closeModal">Cancel</button>
          <button type="submit" class="ns-modal-btn primary">Create Mission</button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="ns-modal-overlay" data-nightshift-target="editModal" data-action="click->nightshift#overlayCloseEdit">
    <div class="ns-modal" data-action="click->nightshift#stopPropagation">
      <h3>‚úèÔ∏è Edit Mission</h3>
      <%= form_with url: nightshift_mission_path(0), method: :patch, local: true, data: { nightshift_target: "editForm" } do %>
        <label>Name</label>
        <input type="text" name="nightshift_mission[name]" required data-nightshift-target="editName">

        <label>Description</label>
        <textarea name="nightshift_mission[description]" data-nightshift-target="editDescription"></textarea>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem;">
          <div>
            <label>Icon</label>
            <input type="text" name="nightshift_mission[icon]" data-nightshift-target="editIcon">
          </div>
          <div>
            <label>Model</label>
            <select name="nightshift_mission[model]" data-nightshift-target="editModel">
              <% model_options.each do |model| %>
                <option value="<%= model %>"><%= model %></option>
              <% end %>
            </select>
          </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem;">
          <div>
            <label>Category</label>
            <select name="nightshift_mission[category]" data-nightshift-target="editCategory">
              <% @categories.each do |cat| %>
                <option value="<%= cat %>"><%= cat %></option>
              <% end %>
            </select>
          </div>
          <div>
            <label>Est. Minutes</label>
            <input type="number" name="nightshift_mission[estimated_minutes]" data-nightshift-target="editMinutes">
          </div>
        </div>

        <label>Frequency</label>
        <select name="nightshift_mission[frequency]" data-nightshift-target="editFrequency" data-action="change->nightshift#toggleEditDays">
          <% @frequencies.each do |freq| %>
            <option value="<%= freq %>"><%= freq %></option>
          <% end %>
        </select>

        <div data-nightshift-target="editDaysWrap" style="display:none;">
          <label>Days of Week</label>
          <div class="ns-days-grid">
            <% week_days.each do |day_num, day_label| %>
              <label>
                <input type="checkbox" name="nightshift_mission[days_of_week][]" value="<%= day_num %>" data-nightshift-target="editDayCheckbox">
                <span><%= day_label %></span>
              </label>
            <% end %>
          </div>
        </div>

        <label>
          <input type="checkbox" name="nightshift_mission[enabled]" value="1" data-nightshift-target="editEnabled" style="width:auto; margin-right:0.4rem;">Enabled
        </label>

        <div class="ns-modal-actions">
          <button type="button" class="ns-modal-btn" data-action="click->nightshift#closeEditModal">Cancel</button>
          <button type="submit" class="ns-modal-btn primary">Save Mission</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
