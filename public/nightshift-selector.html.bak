<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nightshift ‚Äî Mission Control</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        :root {
            --terminal-green: #00FF41;
            --terminal-amber: #FFB000;
            --terminal-red: #FF3131;
            --terminal-cyan: #00D4FF;
            --terminal-blue: #2f81f7;
            --terminal-purple: #a371f7;
            --bg-dark: #0A0E14;
            --bg-panel: #0D1117;
            --bg-card: #161B22;
            --border: #30363D;
            --text: #C9D1D9;
            --text-muted: #8B949E;
            --glow-strength: 0px;
        }
        
        body {
            font-family: 'SF Mono', 'Fira Code', 'Consolas', monospace;
            background: var(--bg-dark);
            color: var(--text);
            line-height: 1.6;
            min-height: 100vh;
            padding-bottom: 120px; /* Space for fixed footer */
        }
        
        /* Scanline effect */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: repeating-linear-gradient(
                0deg,
                rgba(0, 0, 0, 0.1) 0px,
                rgba(0, 0, 0, 0.1) 1px,
                transparent 1px,
                transparent 2px
            );
            pointer-events: none;
            z-index: 1000;
            opacity: 0.3;
        }

        /* Header */
        header {
            background: var(--bg-panel);
            border-bottom: 1px solid var(--border);
            padding: 1.5rem 2rem;
            position: sticky;
            top: 0;
            z-index: 100;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--terminal-green);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-shadow: 0 0 10px rgba(0, 255, 65, 0.3);
        }

        .brand-icon {
            animation: pulse-slow 3s infinite;
        }

        .header-meta {
            text-align: right;
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        .date-display {
            color: var(--terminal-cyan);
            font-weight: 600;
        }

        /* Grid */
        .mission-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Card */
        .task-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 1.25rem;
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .task-card:hover {
            border-color: var(--text-muted);
            transform: translateY(-2px);
        }

        .task-card.selected {
            border-color: var(--terminal-green);
            background: rgba(0, 255, 65, 0.03);
            box-shadow: 0 0 15px rgba(0, 255, 65, 0.1);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 1rem;
        }

        .checkbox-container {
            width: 24px;
            height: 24px;
            border: 2px solid var(--border);
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            transition: all 0.2s;
            background: var(--bg-dark);
        }

        .task-card.selected .checkbox-container {
            border-color: var(--terminal-green);
            background: var(--terminal-green);
        }

        .checkmark {
            color: var(--bg-dark);
            opacity: 0;
            font-weight: bold;
            transform: scale(0.5);
            transition: all 0.2s;
        }

        .task-card.selected .checkmark {
            opacity: 1;
            transform: scale(1);
        }

        .task-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--text);
            line-height: 1.3;
        }

        .task-desc {
            font-size: 0.85rem;
            color: var(--text-muted);
            line-height: 1.5;
            flex-grow: 1;
        }

        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 0.5rem;
            padding-top: 0.75rem;
            border-top: 1px solid rgba(48, 54, 61, 0.5);
        }

        /* Badges */
        .badge {
            font-size: 0.7rem;
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.5px;
            border: 1px solid transparent;
        }

        .badge-model-codex { color: var(--terminal-cyan); border-color: rgba(0, 212, 255, 0.3); background: rgba(0, 212, 255, 0.1); }
        .badge-model-gemini { color: var(--terminal-green); border-color: rgba(0, 255, 65, 0.3); background: rgba(0, 255, 65, 0.1); }
        .badge-model-opus { color: var(--terminal-purple); border-color: rgba(163, 113, 247, 0.3); background: rgba(163, 113, 247, 0.1); }
        .badge-model-glm { color: var(--terminal-amber); border-color: rgba(255, 176, 0, 0.3); background: rgba(255, 176, 0, 0.1); }

        .time-est {
            font-size: 0.8rem;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        /* Footer Control Panel */
        .control-panel {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: var(--bg-panel);
            border-top: 1px solid var(--border);
            padding: 1.5rem 2rem;
            z-index: 200;
            box-shadow: 0 -10px 30px rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: space-between;
            align-items: center;
            backdrop-filter: blur(10px);
        }

        .panel-stats {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .stat-group {
            display: flex;
            flex-direction: column;
            gap: 0.2rem;
        }

        .stat-label {
            font-size: 0.7rem;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-value {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--text);
        }

        .stat-value.highlight {
            color: var(--terminal-cyan);
            text-shadow: 0 0 10px rgba(0, 212, 255, 0.3);
        }

        .launch-btn {
            background: var(--terminal-green);
            color: var(--bg-dark);
            border: none;
            padding: 1rem 2rem;
            font-family: inherit;
            font-weight: 700;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .launch-btn:hover {
            box-shadow: 0 0 25px rgba(0, 255, 65, 0.6);
            transform: translateY(-2px);
        }
        
        .launch-btn:active {
            transform: translateY(0);
        }

        .launch-btn:disabled {
            background: var(--border);
            color: var(--text-muted);
            cursor: not-allowed;
            box-shadow: none;
            transform: none;
        }

        .toggle-all {
            background: transparent;
            border: 1px solid var(--text-muted);
            color: var(--text-muted);
            padding: 0.5rem 1rem;
            border-radius: 4px;
            font-family: inherit;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .toggle-all:hover {
            border-color: var(--text);
            color: var(--text);
        }

        @keyframes pulse-slow {
            0%, 100% { opacity: 1; text-shadow: 0 0 10px rgba(0, 255, 65, 0.3); }
            50% { opacity: 0.7; text-shadow: 0 0 5px rgba(0, 255, 65, 0.1); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            header {
                padding: 1rem;
            }
            .brand { font-size: 1.2rem; }
            .header-meta { display: none; }
            
            .mission-grid {
                padding: 1rem;
                gap: 1rem;
            }

            .control-panel {
                flex-direction: column;
                gap: 1.5rem;
                padding: 1rem;
            }

            .panel-stats {
                width: 100%;
                justify-content: space-between;
                gap: 1rem;
            }

            .launch-btn {
                width: 100%;
                justify-content: center;
            }
        }
        
        .powered-by {
            text-align: center;
            padding: 1rem;
            font-size: 0.75rem;
            color: var(--text-muted);
            opacity: 0.7;
        }
    </style>
</head>
<body>

    <header>
        <div class="brand">
            <span class="brand-icon">üåë</span>
            NIGHTSHIFT
            <span style="color: var(--text-muted); font-weight: 400;">// MISSION CONTROL</span>
        </div>
        <div class="header-meta">
            <div class="date-display" id="current-date">2026-02-11</div>
            <div>STATUS: ONLINE</div>
        </div>
    </header>

    <main class="mission-grid" id="task-grid">
        <!-- Tasks will be injected here by JS -->
    </main>
    
    <div class="powered-by">
        Powered by Otacon üìü + OpenClaw
    </div>

    <div class="control-panel">
        <div class="panel-stats">
            <button class="toggle-all" id="toggle-all-btn">Select All</button>
            
            <div class="stat-group">
                <div class="stat-label">Missions</div>
                <div class="stat-value"><span id="count-selected">0</span> / <span id="count-total">0</span></div>
            </div>
            
            <div class="stat-group">
                <div class="stat-label">Est. Time</div>
                <div class="stat-value highlight" id="time-total">0m</div>
            </div>
        </div>
        
        <button class="launch-btn" id="launch-btn" disabled>
            <span>Launch Nightshift</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
        </button>
    </div>

    <script>
        // Data Configuration
        const TASKS = [
            { id: 1, title: "Dependency Updates", desc: "Scan 12 active projects for outdated deps, run npm audit, create ClawDeck tasks for findings. Only runs when new commits detected.", model: "codex", time: 45 },
            { id: 2, title: "ISP Network Health Report", desc: "Pull UISP metrics + MikroTik data, analyze signal quality, predict failures.", model: "gemini", time: 20 },
            { id: 3, title: "Customer Churn Analysis", desc: "Analyze UISP billing + usage patterns, identify at-risk customers.", model: "gemini", time: 30 },
            { id: 4, title: "Security Scan", desc: "npm audit + bundler-audit + Docker image scan + server hardening check.", model: "codex", time: 30 },
            { id: 5, title: "Financial Intelligence", desc: "Firefly III daily P&L, anomaly detection, billing reconciliation.", model: "gemini", time: 15 },
            { id: 6, title: "Network Documentation", desc: "Auto-generate IP maps, router configs, network diagrams from MikroTik/UISP.", model: "codex", time: 40 },
            { id: 7, title: "Competitor Intelligence", desc: "Monitor competitor ISP websites and pricing, generate weekly report.", model: "gemini", time: 20 },
            { id: 8, title: "Social Media Pipeline", desc: "Research trends, generate post ideas and copy for Punto Futura.", model: "gemini", time: 25 },
            { id: 9, title: "Codebase Health Scan", desc: "Complexity metrics, dead code detection, test coverage gaps across 12 active projects. Only on new commits.", model: "codex", time: 45 },
            { id: 10, title: "UISP Signal Quality Report", desc: "Detailed per-client signal analysis with degradation alerts.", model: "gemini", time: 15 },
            { id: 11, title: "Backup Validation", desc: "Verify all database backups completed successfully, test restore.", model: "glm", time: 10 },
            { id: 12, title: "Docker Health Deep Scan", desc: "Container resource usage, image updates, security scan.", model: "glm", time: 15 }
        ];

        // State
        const state = {
            selectedIds: new Set()
        };

        // DOM Elements
        const grid = document.getElementById('task-grid');
        const countSelectedEl = document.getElementById('count-selected');
        const countTotalEl = document.getElementById('count-total');
        const timeTotalEl = document.getElementById('time-total');
        const launchBtn = document.getElementById('launch-btn');
        const toggleAllBtn = document.getElementById('toggle-all-btn');
        const dateEl = document.getElementById('current-date');

        // Init
        function init() {
            // Set date
            const now = new Date();
            dateEl.textContent = now.toISOString().split('T')[0];
            
            // Render Tasks
            renderTasks();
            updateStats();
        }

        function renderTasks() {
            countTotalEl.textContent = TASKS.length;
            grid.innerHTML = '';
            
            TASKS.forEach(task => {
                const card = document.createElement('div');
                card.className = `task-card ${state.selectedIds.has(task.id) ? 'selected' : ''}`;
                card.onclick = (e) => toggleTask(task.id);
                
                card.innerHTML = `
                    <div class="card-header">
                        <div class="checkbox-container">
                            <span class="checkmark">‚úì</span>
                        </div>
                        <div>
                            <div class="task-title">${task.title}</div>
                        </div>
                    </div>
                    <div class="task-desc">${task.desc}</div>
                    <div class="card-footer">
                        <span class="badge badge-model-${task.model}">${task.model}</span>
                        <span class="time-est">‚è± ~${task.time}min</span>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function toggleTask(id) {
            if (state.selectedIds.has(id)) {
                state.selectedIds.delete(id);
            } else {
                state.selectedIds.add(id);
            }
            // Re-render specifically just classes for perf (or full re-render for simplicity)
            // For 12 items, full re-render is fine, but toggling class is better
            updateClasses();
            updateStats();
        }

        function updateClasses() {
            const cards = grid.children;
            TASKS.forEach((task, index) => {
                if (state.selectedIds.has(task.id)) {
                    cards[index].classList.add('selected');
                } else {
                    cards[index].classList.remove('selected');
                }
            });
        }

        function toggleAll() {
            if (state.selectedIds.size === TASKS.length) {
                state.selectedIds.clear();
                toggleAllBtn.textContent = "Select All";
            } else {
                TASKS.forEach(t => state.selectedIds.add(t.id));
                toggleAllBtn.textContent = "Deselect All";
            }
            updateClasses();
            updateStats();
        }

        toggleAllBtn.onclick = toggleAll;

        function updateStats() {
            const count = state.selectedIds.size;
            countSelectedEl.textContent = count;
            
            let totalMin = 0;
            TASKS.forEach(t => {
                if (state.selectedIds.has(t.id)) totalMin += t.time;
            });

            // Format time
            if (totalMin < 60) {
                timeTotalEl.textContent = `${totalMin}m`;
            } else {
                const h = Math.floor(totalMin / 60);
                const m = totalMin % 60;
                timeTotalEl.textContent = `${h}h ${m}m`;
            }

            // Button state
            if (count > 0) {
                launchBtn.disabled = false;
                launchBtn.innerHTML = `<span>Launch ${count} Missions</span> <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>`;
            } else {
                launchBtn.disabled = true;
                launchBtn.innerHTML = `<span>Launch Nightshift</span>`;
            }
        }

        // Launch Handler
        launchBtn.onclick = async () => {
            if (state.selectedIds.size === 0) return;

            launchBtn.disabled = true;
            launchBtn.innerHTML = `<span>Initiating Sequence...</span>`;
            
            const payload = {
                task_ids: Array.from(state.selectedIds)
            };

            try {
                // Simulate network request visual delay
                await new Promise(r => setTimeout(r, 800));
                
                const response = await fetch('/api/v1/nightshift/launch', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    launchBtn.style.background = 'var(--terminal-cyan)';
                    launchBtn.innerHTML = `<span>üöÄ Sequence Started</span>`;
                    setTimeout(() => {
                        window.location.href = '/dashboard'; // Redirect to dashboard or success page
                    }, 1500);
                } else {
                    throw new Error('Launch failed');
                }
            } catch (err) {
                console.error(err);
                // Fallback demo mode if API doesn't exist yet
                launchBtn.style.background = 'var(--terminal-cyan)';
                launchBtn.innerHTML = `<span>üöÄ DEMO: Launched!</span>`;
                setTimeout(() => {
                    alert(`[DEMO] Launched tasks: ${Array.from(state.selectedIds).join(', ')}`);
                    launchBtn.disabled = false;
                    updateStats(); // Reset button text
                }, 1000);
            }
        };

        // Start
        init();

    </script>
</body>
</html>
